{% extends './Navbar/Navbar.twig' %}

{% block content %}
    <div class="max-w-5xl mx-auto p-4 md:p-6">

        <h1 class="text-2xl md:text-3xl font-bold mb-6 text-gray-800">
            Кабинет курьера - {{ courier.name }}
        </h1>

        <!-- Балансы -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mb-8">
            <div class="border rounded-xl p-4 bg-white shadow-sm hover:shadow-md transition">
                <div class="text-sm text-gray-500">Неподтвержденные</div>
                <div class="text-2xl font-semibold mt-1">{{ courier.balance_unaccepted|default(0) }}</div>
                <a class="btn btn-sm mt-4 bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full"
                   href="/courier/pending">
                    Подтвердить поступления
                </a>
            </div>

            <div class="border rounded-xl p-4 bg-white shadow-sm hover:shadow-md transition">
                <div class="text-sm text-gray-500">Доступные товарные деньги</div>
                <div class="text-2xl font-semibold mt-1">{{ courier.balance_sum|default(0) }}</div>
            </div>
        </div>

        <!-- Действия -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

            <!-- Карточка: Доход -->
            <div class="border rounded-lg shadow p-4 flex flex-col items-center gap-3">
                <h2 class="text-lg font-semibold">Доход</h2>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   style="height: 70px; display: flex; align-items: center; justify-content: center;"
                   href="/courier/incomeotherform">
                    Деньги из других источников
                </a>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full text-center"
                   href="/categories/projectPage">
                    Доход от проекта
                </a>
            </div>

            <!-- Карточка: Расход -->
            <div class="border rounded-lg shadow p-4 flex flex-col items-center gap-3">
                <h2 class="text-lg font-semibold">Расход</h2>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/courier/expenseform">
                    Создать расход
                </a>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/categories/pageCategories">
                    Категории расходов
                </a>
            </div>

            <!-- Карточка: Выдача -->
            <div class="border rounded-lg shadow p-4 flex flex-col items-center gap-3">
                <h2 class="text-lg font-semibold">Выдача</h2>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/courier/debtpayoutform">
                    Выдать долг клиенту
                </a>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/courier/issueaAnotherCourier">
                    Курьеру
                </a>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/courier/issueaAnotherAdmin">
                    Aдминистратору
                </a>
            </div>

            <!-- Карточка: Отчёты -->
            <div class="border rounded-lg shadow p-4 flex flex-col items-center gap-3">
                <h2 class="text-lg font-semibold">Отчёты</h2>
                <a class="btn bg-blue-600 border-blue-600 hover:bg-blue-700 text-white w-full py-4 px-6 text-center"
                   href="/courier/courierFinances">
                    Отчёты по финансам
                </a>
            </div>

        </div>




    </div>
{% endblock %}
