{% extends './Navbar/Navbar.twig' %}

{% block content %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
        <div class="flex flex-col p-4 bg-white rounded-xl shadow-sm border border-gray-200">

            <!-- Имя и действия -->
            <div class="flex items-center justify-between">
                <div class="text-xl font-semibold text-gray-800">{{ courier.name }}</div>
            </div>

            <!-- Общий баланс или Долг -->
            <div class="flex items-center space-x-[10px]">
                <div class="font-semibold text-gray-500">
                    {% if courier.balance_sum >= 0 %}
                        Общий баланс:
                    {% else %}
                        Долг:
                    {% endif %}
                </div>
                <div class="font-semibold text-gray-600 text-base">
                    {{ courier.balance_sum|number_format(0, ',', ' ') }}
                </div>
            </div>

            <!-- Непринятый баланс -->
            <div class="flex items-center space-x-[10px] mb-[30px]">
                <div class="font-semibold text-gray-500">
                    Непринятый баланс:
                </div>
                <div class="font-semibold text-gray-600 text-base">
                    {{ courier.balance_unaccepted|number_format(0, ',', ' ') }}
                </div>
            </div>

            <!-- Кнопка скачать -->
            {% include './Unloading/DownloadTable.twig' %}

            <!-- Категории дата искать -->
            <div class="w-full max-w-8xl mx-auto space-y-4">
                <div class="flex flex-col md:flex-row md:items-center gap-3 md:gap-4
                p-3 md:p-4 bg-white rounded-xl shadow-sm">

                    <!-- Категория расхода -->
                    <div x-data="{ open: false, level: 0, path: [] }" class="relative w-full md:w-[28rem]">
                        <button @click="open = !open"
                                class="w-full
                           h-[40px] md:h-[56px]
                           text-left bg-white border border-gray-300
                           px-3 md:px-5 py-2 md:py-3
                           rounded-lg md:rounded-xl
                           shadow-sm hover:shadow-md transition
                           text-xs md:text-base font-medium
                           flex items-center">
                            <template x-if="path.length === 0">
                                <span>Выберите категорию расхода</span>
                            </template>
                            <template x-if="path.length > 0">
                                <span id="category" x-text="path.join(' > ')"></span>
                            </template>
                        </button>

                        <!-- Выпадающее меню -->
                        <div x-show="open"
                             @click.outside="open = false"
                             class="absolute mt-2 w-full z-50 bg-white border border-gray-200
                        rounded-lg md:rounded-xl shadow-xl
                        p-3 md:p-4 space-y-3
                        max-h-[260px] md:max-h-[320px]
                        overflow-y-auto transition-all duration-300"
                             x-transition>
                            <div x-show="level > 0" class="mb-2">
                                <button @click="level--; path.pop()"
                                        class="text-xs md:text-sm text-blue-600 hover:underline">
                                    ← Назад
                                </button>
                            </div>
                            {{ categories_html|raw }}
                        </div>
                    </div>

                    <!-- Доход от проекта -->
                    <div x-data="{ open: false, level: 0, path: [] }" class="relative w-full md:w-[28rem]">
                        <button @click="open = !open"
                                class="w-full
                           h-[40px] md:h-[56px]
                           text-left bg-white border border-gray-300
                           px-3 md:px-5 py-2 md:py-3
                           rounded-lg md:rounded-xl
                           shadow-sm hover:shadow-md transition
                           text-xs md:text-base font-medium
                           flex items-center">
                            <template x-if="path.length === 0">
                                <span>Доход от проекта</span>
                            </template>
                            <template x-if="path.length > 0">
                                <span id="category" x-text="path.join(' > ')"></span>
                            </template>
                        </button>

                        <!-- Выпадающее меню -->
                        <div x-show="open"
                             @click.outside="open = false"
                             class="absolute mt-2 w-full z-50 bg-white border border-gray-200
                        rounded-lg md:rounded-xl shadow-xl
                        p-3 md:p-4 space-y-3
                        max-h-[260px] md:max-h-[320px]
                        overflow-y-auto transition-all duration-300"
                             x-transition>
                            <div x-show="level > 0" class="mb-2">
                                <button @click="level--; path.pop()"
                                        class="text-xs md:text-sm text-blue-600 hover:underline">
                                    ← Назад
                                </button>
                            </div>
                            {{ project_html|raw }}
                        </div>
                    </div>

                    <!-- Дата "от" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-xs md:text-sm font-medium text-gray-600">ОТ-</span>
                        <input type="text"
                               id="datepicker_from"
                               placeholder="Дата начала"
                               autocomplete="off"
                               class="w-full md:w-[12rem]
                          h-[40px] md:h-[56px]
                          p-2 md:p-4
                          bg-white rounded-lg md:rounded-xl
                          shadow-sm
                          text-xs md:text-base font-semibold text-gray-700 uppercase
                          border border-gray-200"/>
                    </div>

                    <!-- Дата "до" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-xs md:text-sm font-medium text-gray-600">ДО-</span>
                        <input type="text"
                               id="datepicker_to"
                               placeholder="Дата окончания"
                               autocomplete="off"
                               class="w-full md:w-[12rem]
                          h-[40px] md:h-[56px]
                          p-2 md:p-4
                          bg-white rounded-lg md:rounded-xl
                          shadow-sm
                          text-xs md:text-base font-semibold text-gray-700 uppercase
                          border border-gray-200"/>
                    </div>

                    <!-- Кнопка поиска -->
                    <div class="w-full md:w-auto">
                        <button id="searchFilters" type="submit"
                                class="w-full md:w-auto
                           h-[40px] md:h-[56px]
                           px-4 md:px-6
                           bg-blue-600 hover:bg-blue-700
                           text-white text-xs md:text-sm font-semibold
                           rounded-lg md:rounded-xl
                           shadow-sm transition">
                            Поиск с фильтрам
                        </button>
                    </div>
                </div>
            </div>
        </div>


        <!-- Таблица расходов -->
        {% if get_courier_finances is empty %}
            <div role="alert" class="alert alert-warning mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Ничего не найдено</span>
            </div>
        {% else %}
            <!-- Таблица -->
            <div class="hidden md:block overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm mt-4">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата выдачи</th>
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">День</th>
                        <th class="px-3 py-2 min-w-200">Сумма</th>
                        <th class="px-3 py-2">Категории</th>
                        <th class="px-3 py-2">От кого</th>
                        <th class="px-3 py-2">Комментарии</th>
                        <th class="px-3 py-2">Статус</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for finances in get_courier_finances %}
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2">{{ finances.issue_date }}</td>
                            <td class="px-3 py-2">{{ finances.date }}</td>
                            <td class="px-3 py-2">{{ finances.dey }}</td>
                            <td class="px-3 py-2 min-w-200">{{ finances.amount|number_format(0, ',', ' ') }}</td>
                            <td class="px-3 py-2">{{ finances.category }}</td>
                            <td class="px-3 py-2">{{ finances.from_whom }}</td>
                            <td class="px-3 py-2">{{ finances.comments }}</td>
                            <td class="px-3 py-2">
                                {% if finances.status == 'confirm_courier' %}
                                    Не принят
                                {% elseif finances.status == 'pending' %}
                                    Не обработан
                                {% elseif finances.status == 'processed' %}
                                    Принят
                                {% else %}
                                    Неизвестно
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата выдачи</th>
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">День</th>
                        <th class="px-3 py-2 min-w-200">Сумма</th>
                        <th class="px-3 py-2">Категории</th>
                        <th class="px-3 py-2">От кого</th>
                        <th class="px-3 py-2">Комментарии</th>
                        <th class="px-3 py-2">Статус</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        {% endif %}

        <div class="lg:hidden space-y-4 mt-4">
            {% for finances in get_courier_finances %}
                <div class="border border-gray-200 rounded-lg p-3 shadow-sm bg-white text-[13px] space-y-2">
                    <div>
                        <div class="text-gray-500 text-xs">Дата выдачи:</div>
                        <div class="font-medium">{{ finances.issue_date }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">Дата:</div>
                        <div class="font-medium">{{ finances.date }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">День:</div>
                        <div class="font-medium">{{ finances.dey }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">Сумма:</div>
                        <div class="font-semibold">{{ finances.amount }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">Категории:</div>
                        <div class="text-[11px] break-all">{{ finances.category }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">От кого:</div>
                        <div class="text-[11px] break-all">{{ finances.from_whom }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">Комментарии:</div>
                        <div class="text-[11px] break-all">{{ finances.comments }}</div>
                    </div>
                    <div>
                        <div class="text-gray-500 text-xs">Статус:</div>
                        <div class="font-medium">
                            {% if finances.status == 'confirm_courier' %}
                                Не принят
                            {% elseif finances.status == 'pending' %}
                                Не обработан
                            {% elseif finances.status == 'processed' %}
                                Принят
                            {% else %}
                                Неизвестно
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <input type="checkbox" id="cornerModal" class="hidden peer"/>
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-4 w-80 z-50 hidden peer-checked:flex peer-checked:flex-col">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-lg font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-sm text-gray-600">Пользователь успешно добавлен.</p>
            </div>
            <label for="cornerModal" class="ml-4 text-gray-400 hover:text-gray-600 cursor-pointer">✕</label>
        </div>
    </div>


    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    <!-- Corner Modal -->
    <input type="checkbox" id="cornerModal" class="hidden peer"/>
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-3 w-72 z-50 hidden peer-checked:flex peer-checked:flex-col text-sm
            sm:w-80 sm:p-4">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-base font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-xs text-gray-600">Пользователь успешно добавлен.</p>
            </div>
