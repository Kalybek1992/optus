            if (dateTo.value) params.set('date', dateTo.value);

            // –ü–µ—Ä–µ—Ö–æ–¥ —Å –Ω–æ–≤—ã–º–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞–º–∏
