                } else {
                    showModal('–û—à–∏–±–∫–∞!', '–ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–º–µ–Ω—è—Ç—å —Å—Ç–∞–≤–∫–∏ –Ω–∞ –Ω–æ–≤—ã–µ!');
                }

                ratesModal.close();
            });

        });
