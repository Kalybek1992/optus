                ratesModal.close();
                transitInput.value = '';
                cashInput.value = '';
            });

            // 3Ô∏è‚É£ —Å–æ—Ö—Ä–∞–Ω–∏—Ç—å
            confirmBtn.addEventListener('click', async () => {
                const body = {};

                // --- –ø–æ–ª—É—á–∏—Ç—å manager_id –∏ –¥–∞—Ç—É –∏–∑ URL ---
                const params = new URLSearchParams(window.location.search);
                const managerId = params.get('manager_id');
                const dateParam = params.get('date');

                if (!managerId) {
                    showModal?.('–û—à–∏–±–∫–∞!', 'Manager ID –Ω–µ –Ω–∞–π–¥–µ–Ω –≤ —Å—Å—ã–ª–∫–µ.');
                    return;
                }

                body.manager_id = Number(managerId);

                // --- –¥–∞—Ç–∞: –µ—Å–ª–∏ –µ—Å—Ç—å, –∏—Å–ø–æ–ª—å–∑—É–µ–º, –µ—Å–ª–∏ –Ω–µ—Ç ‚Äî null ---
                body.date = dateParam ? dateParam : null;

                // --- –∑–Ω–∞—á–µ–Ω–∏—è –∏–∑ –∏–Ω–ø—É—Ç–æ–≤ ---
                const transitRateVal = transitInput.value.trim();
                const cashBetVal     = cashInput.value.trim();

                // --- transit-rate ---
                if (transitRateVal !== '') {
                    const transitRateNum = Number(transitRateVal.replace(',', '.'));
                    if (Number.isNaN(transitRateNum) || transitRateNum < 0.01 || transitRateNum > 0.99) {
                        showModal?.('–û—à–∏–±–∫–∞!', '–°—Ç–∞–≤–∫–∞ —Ç—Ä–∞–Ω–∑–∏—Ç –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ—Ç 0.01 –¥–æ 0.99.');
                        return;
                    }
                    body.transit_rate = formatFloat(transitRateNum);
                }

                // --- cash-bet ---
                if (cashBetVal !== '') {
                    const cashBetNum = Number(cashBetVal.replace(',', '.'));
                    if (Number.isNaN(cashBetNum) || cashBetNum < 0.01 || cashBetNum > 0.99) {
                        showModal?.('–û—à–∏–±–∫–∞!', '–°—Ç–∞–≤–∫–∞ –∫–µ—à –¥–æ–ª–∂–Ω–∞ –±—ã—Ç—å –æ—Ç 0.01 –¥–æ 0.99.');
                        return;
                    }
                    body.cash_bet = formatFloat(cashBetNum);
                }

                // --- –µ—Å–ª–∏ –Ω–∏—á–µ–≥–æ –Ω–µ –≤–≤–µ–ª–∏ ---
                if (!body.transit_rate || !body.cash_bet) {
                    showModal?.('–û—à–∏–±–∫–∞!', '–í–≤–µ–¥–∏—Ç–µ –æ–±–µ —Å—Ç–∞–≤–∫–∏.');
                    return;
                }


                // ===== –û–¢–ü–†–ê–í–ö–ê =====
                const result = await postDataRes('/supplier/changeSettlementRates', body);

                console.log(result);

                if (result.success) {
