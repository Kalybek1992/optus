{% extends './Navbar/Navbar.twig' %}

{% block content %}

    {% include './Breadcrumb/GetExpenses.twig' %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
        <!-- Категории дата искать  -->
        <div class="w-full max-w-8xl mx-auto space-y-4">
            <div class="flex flex-col md:flex-row md:items-center gap-4">
                <!-- Дата "от" -->
                <div class="flex items-center w-full md:w-auto gap-2">
                    <span class="text-sm font-medium text-gray-600">ОТ-</span>
                    <input type="text"
                           id="datepicker_from"
                           placeholder="Дата начала"
                           autocomplete="off"
                           class="w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                </div>
                <!-- Дата "до" -->
                <div class="flex items-center w-full md:w-auto gap-2">
                    <span class="text-sm font-medium text-gray-600">ДО-</span>
                    <input type="text"
                           id="datepicker_to"
                           placeholder="Дата окончания"
                           autocomplete="off"
                           class="w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                </div>
                <!-- Кнопка "Искать" -->
                <div class="w-full md:w-auto">
                    <button id="searchFilters" type="submit"
                            class="w-full md:w-auto h-[56px] px-6 bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-semibold rounded-xl shadow-sm transition">
                        Поиск с фильтрам
                    </button>
                </div>
            </div>
        </div>

        <!-- Таблица расходов -->
        {% if expenses is empty %}
            <div role="alert" class="alert alert-warning mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Ничего не найдено</span>
            </div>
        {% else %}
            <!-- Таблица -->

            <div class="text-center text-sm font-semibold text-gray-700">
                Закрытие долгов с {{ date_from ?? '--.--.----' }} по {{ date_to ?? '--.--.----' }}
                <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
            </div>

            <div class="overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Описание</th>
                        <th class="px-3 py-2 w-20">Сумма</th>
                        <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Комментарии</th>
                        <th class="px-3 py-2">Клиент</th>
                        <th class="px-3 py-2">Статус</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for expense in expenses %}
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2">{{ expense.date }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ expense.description }}</td>
                            <td class="px-3 py-2">{{ expense.amount }}</td>
                            <td class="px-3 py-2">{{ expense.comments }}</td>
                            <td class="px-3 py-2">{{ expense.client_name }}</td>
                            <td class="px-3 py-2">
                                {% if expense.status == 'processed' %}
                                    <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-700">Подтверждён</span>
                                {% elseif expense.status == 'confirm_admin' %}
                                    <span class="px-2 py-1 text-xs rounded-full bg-yellow-100 text-yellow-700">Не подтверждён администратором</span>
                                {% else %}
                                    <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-500">Неизвестно</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2">Дата</th>
                        <th class="px-3 py-2">Описание</th>
                        <th class="px-3 py-2 w-20">Сумма</th>
                        <th class="px-3 py-2">Комментарии</th>
                        <th class="px-3 py-2">Клиент</th>
                        <th class="px-3 py-2">Статус</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        {% endif %}
    </div>

    <input type="checkbox" id="cornerModal" class="hidden peer" />
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-4 w-80 z-50 hidden peer-checked:flex peer-checked:flex-col">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-lg font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-sm text-gray-600">Пользователь успешно добавлен.</p>
            </div>
            <label for="cornerModal" class="ml-4 text-gray-400 hover:text-gray-600 cursor-pointer">✕</label>
        </div>
    </div>


    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>

    <!-- Инициализация -->
    <script>
        function showCornerModal(message) {
            const checkbox = document.getElementById('cornerModal');
            const txtModal = document.getElementById('txtModal');
            checkbox.checked = true;
            txtModal.innerHTML= message;


            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }

        const pickerFrom = new Pikaday({
            field: document.getElementById('datepicker_from'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });

        const pickerTo = new Pikaday({
            field: document.getElementById('datepicker_to'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });


        document.getElementById('searchFilters').addEventListener('click', () => {
            const category = document.getElementById('category')?.textContent.trim();
            const dateFrom = document.getElementById('datepicker_from');
            const datepickerTo = document.getElementById('datepicker_to');

            if (!category && !dateFrom.value && !datepickerTo.value) {
                showCornerModal('Выберите фильтр');
                return;
            }

            if (!dateFrom.value && datepickerTo.value) {
                showCornerModal('Выберите начало даты!');
                return;
            }


            const params = new URLSearchParams();

            if (category) params.append('category', category);
            if (dateFrom.value) params.append('date_from', dateFrom.value);
            if (datepickerTo.value) params.append('date_to', datepickerTo.value);

            window.location.href = `/supplier/debtExpenses?${params.toString()}`;
        });


    </script>




{% endblock %}
