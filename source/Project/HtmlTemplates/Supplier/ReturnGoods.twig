{% extends './Navbar/Navbar.twig' %}

{% block content %}
    <div class="max-w-7xl mx-auto p-8 space-y-10">
        <!-- Заголовок -->
        <div class="text-center">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Отчёты менеджера</h1>
            <p class="text-gray-500 text-sm mb-2">{{ manager }}</p>
        </div>

        <div class="flex flex-col md:flex-row md:items-center gap-4 p-4 mb-5">
            <!-- Селектор компании -->
            <div class="flex items-center w-full md:w-auto gap-2">
                <span class="text-sm font-medium text-emerald-600">Компания-</span>
                <select id="company_select"
                        class="w-full md:w-[14rem] h-[44px] px-3 bg-white border border-emerald-600 rounded-lg shadow-sm text-sm font-medium text-gray-700 uppercase focus:outline-none focus:ring-2 focus:ring-emerald-600 focus:border-emerald-600 transition">
                    <option value="">Выберите компанию</option>
                    {% for companie in supplier_companies %}
                        <option value="{{ companie.id }}">{{ companie.company_name }}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- Дата "от" -->
            <div class="flex items-center w-full md:w-auto gap-2">
                <span class="text-sm font-medium text-emerald-600">ОТ-</span>
                <input type="text"
                       id="datepicker_from"
                       placeholder="Дата начала"
                       autocomplete="off"
                       class="w-full md:w-[12rem] h-[44px] px-3 bg-white border border-emerald-600 rounded-lg shadow-sm text-sm font-medium text-gray-700 uppercase focus:outline-none focus:ring-2 focus:ring-emerald-600 focus:border-emerald-600 transition"/>
            </div>

            <!-- Дата "до" -->
            <div class="flex items-center w-full md:w-auto gap-2">
                <span class="text-sm font-medium text-emerald-600">ДО-</span>
                <input type="text"
                       id="datepicker_to"
                       placeholder="Дата окончания"
                       autocomplete="off"
                       class="w-full md:w-[12rem] h-[44px] px-3 bg-white border border-emerald-600 rounded-lg shadow-sm text-sm font-medium text-gray-700 uppercase focus:outline-none focus:ring-2 focus:ring-emerald-600 focus:border-emerald-600 transition"/>
            </div>

            <!-- Кнопка "Искать" -->
            <div class="w-full md:w-auto">
                <button id="searchFilters" type="submit"
                        class="w-full md:w-auto h-[44px] px-6 bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-semibold rounded-lg shadow-sm transition">
                    Поиск с фильтрам
                </button>
            </div>
        </div>


        <!-- Заголовок темы таблицы -->
        <div class="text-center text-sm font-semibold text-gray-700">
            Возврат отгрузки менеджера с {{ date_from ?? '--.--.----' }} по {{ date_to ?? '--.--.----' }}
            <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
        </div>


        <!-- Раздел: Транзит (Клиентские услуги) -->
        {% if manager_finances is not empty %}
            <div class="bg-white shadow-sm rounded-2xl p-4 sm:p-6 border border-gray-100 mt-8">
                <h2 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-4 sm:mb-6">
                    Оформленный возвраты менеджера <span class="text-gray-500 text-base sm:text-lg">{{ manager }}</span>
                </h2>

                <div class="overflow-x-auto">
                    <table class="min-w-full text-xs sm:text-sm text-left border-t border-gray-200 table-auto">
                        <thead class="bg-gray-50 text-gray-700">
                        <tr class="border-b">
                            <th class="py-2 px-2 sm:px-4 font-medium">Дата возврата</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Компания</th>
                            <th class="py-2 px-2 sm:px-4 font-medium w-72 sm:w-80 break-words">Комментарии</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Тип возврата</th>
                            <th class="py-2 px-2 sm:px-4 font-medium w-28 sm:w-36 text-right hidden sm:table-cell">Сумма (₽)</th>
                        </tr>
                        </thead>

                        <tbody class="text-gray-700">
                            {% for item in manager_finances %}
                                <tr class="hover:bg-gray-50 transition align-top flex flex-col sm:table-row mb-2 sm:mb-0">
                                    <td class="py-2 px-2 sm:px-4">{{ item.date|date('d.m.Y') }}</td>
                                    <td class="py-2 px-2 sm:px-4">{{ item.company_name ?? 'Неизвестно' }}</td>
                                    <td class="py-2 px-2 sm:px-4 w-72 sm:w-80 break-words">{{ item.comments }}</td>
                                    <td class="py-2 px-2 text-center">
                                        {% if item.return_type == 'cash' %}
                                            <span class="text-green-600 font-medium">Наличка</span>

                                        {% elseif item.return_type == 'wheel' %}
                                            <span class="text-blue-600 font-medium cursor-pointer hover:underline open-balance-modal"
                                                  data-company="{{ item.company_name }}"
                                                  data-date="{{ item.date }}"
                                                  data-comment="{{ item.comments }}"
                                                  data-amount="{{ item.amount }}"
                                                  data-finance-id="{{ item.id }}">
                                                Колесо
                                            </span>
                                        {% elseif item.return_type == 'return_wheel' %}
                                            <span class="text-purple-600 font-medium">Товарный</span>
                                        {% else %}
                                            <span class="text-gray-400">—</span>
                                        {% endif %}
                                    </td>
                                    <td class="py-2 px-2 sm:px-4 font-semibold text-green-600 text-right sm:text-right">
                                        {{ item.amount|number_format(0, ',', ' ') }} ₽
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% else %}
            <div class="bg-white shadow-sm rounded-2xl p-6 text-center text-gray-600 border border-gray-100 mt-8">
                <h2 class="text-xl font-semibold mb-2">Данные не найдены</h2>
                <p class="text-sm text-gray-500">Похоже, по выбранным параметрам нет записей. Попробуйте изменить условия поиска.</p>
            </div>
        {% endif %}
    </div>

    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    <dialog id="balance_modal" class="modal">
        <div class="modal-box relative rounded-2xl p-6 sm:p-8 w-full max-w-md bg-white shadow-xl">
            <h3 class="text-xl sm:text-2xl font-semibold text-gray-800 mb-6 text-center">
                Определить как товарный баланс
            </h3>

            <div class="space-y-4">
                <!-- Дата -->
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-1">Дата</p>
                    <input type="text" id="balance_modal_date"
                           class="w-full rounded-lg border border-green-600 text-gray-800 px-3 py-2 text-sm outline-none"
                           readonly>
                </div>

                <!-- Компания -->
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-1">Компания</p>
                    <input type="text" id="balance_modal_company"
                           class="w-full rounded-lg border border-green-600 text-gray-800 px-3 py-2 text-sm outline-none"
                           readonly>
                </div>

                <!-- Комментарий -->
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-1">Комментарий</p>
                    <textarea id="balance_modal_comment"
                              class="w-full rounded-lg border border-green-600 text-gray-800 px-3 py-2 text-sm outline-none"
                              rows="3" readonly></textarea>
                </div>

                <!-- Сумма -->
                <div>
                    <p class="text-sm font-medium text-gray-500 mb-1">Сумма возврата</p>
                    <input type="text" id="balance_modal_amount"
                           class="w-full rounded-lg border border-green-600 text-gray-800 px-3 py-2 text-sm outline-none"
                           readonly>
                </div>
            </div>

            <div class="flex justify-end gap-3 mt-6">
                <button id="balance_cancel" class="btn btn-ghost px-5 py-2 text-gray-700">Отмена</button>
                <button id="balance_confirm"
                        class="btn bg-green-600 hover:bg-green-700 text-white border-none px-6 py-2">
                    Сохранить
                </button>
            </div>
        </div>

        <form method="dialog" class="modal-backdrop bg-black/40 backdrop-blur-sm">
            <button>close</button>
        </form>
    </dialog>

    <!-- Модалки ошибок и успеха -->
    <dialog id="errorModal" class="modal">
        <div class="modal-box">
            <h3 class="text-lg font-bold">Ошибка!</h3>
            <p id="errorText" class="py-4"></p>
            <div class="modal-action">
                <form method="dialog">
                    <button class="btn">Закрыть</button>
                </form>
            </div>
        </div>
    </dialog>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <script src="/assets/js/PostData.js?v=<?= time() ?>"></script>

    <script>
        function showCornerModal(message) {
            const checkbox = document.getElementById('notifications');
            const txtModal = document.getElementById('notifications-txt');
            checkbox.checked = true;
            txtModal.innerHTML = message;

            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }


        // -----------------------------------
        // Универсальная функция для ошибок
        // -----------------------------------
        const openErrorModal = (message) => {
            const errorModal = document.getElementById('errorModal');
            const errorText = document.getElementById('errorText');
            if (errorModal && errorText) {
                errorText.textContent = message;
                errorModal.showModal();
            }
        };


        const pickerFrom = new Pikaday({
            field: document.getElementById('datepicker_from'),
            format: 'DD.MM.YYYY',
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });

        const pickerTo = new Pikaday({
            field: document.getElementById('datepicker_to'),
            format: 'DD.MM.YYYY',
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });

        document.getElementById('searchFilters').addEventListener('click', () => {
            const category = document.getElementById('category')?.textContent.trim();
            const dateFrom = document.getElementById('datepicker_from');
            const dateTo = document.getElementById('datepicker_to');
            const companySelect = document.getElementById('company_select');

            if (!category && !dateFrom.value && !dateTo.value && !companySelect.value) {
                showCornerModal('Выберите фильтр');
                return;
            }

            if (!dateFrom.value && dateTo.value) {
                showCornerModal('Выберите начало даты!');
                return;
            }

            // Берём текущий URL и параметры
            const currentUrl = new URL(window.location.href);
            const params = new URLSearchParams(currentUrl.search);

            if (dateFrom.value) params.set('date_from', dateFrom.value);
            if (dateTo.value) params.set('date_to', dateTo.value);
            if (companySelect.value) params.set('legal_id', companySelect.value);

            // Переход с новыми параметрами
            window.location.href = `${currentUrl.origin}${currentUrl.pathname}?${params.toString()}`;
        });


        const modal = document.getElementById('balance_modal');
        const btnCancel = document.getElementById('balance_cancel');
        const btnConfirm = document.getElementById('balance_confirm');

        let selectedData = {};

        // Открытие модалки
        document.querySelectorAll('.open-balance-modal').forEach(el => {
            el.addEventListener('click', () => {
                selectedData = {
                    date: el.dataset.date,
                    company: el.dataset.company,
                    comment: el.dataset.comment,
                    amount: el.dataset.amount,
                    legal_id: el.dataset.legalId,
                    finance_id: el.dataset.financeId
                };

                document.getElementById('balance_modal_date').value = selectedData.date;
                document.getElementById('balance_modal_company').value = selectedData.company;
                document.getElementById('balance_modal_comment').value = selectedData.comment;
                document.getElementById('balance_modal_amount').value = selectedData.amount + ' ₽';

                modal.showModal();
            });
        });

        // Закрыть
        btnCancel.addEventListener('click', () => modal.close());

        // Сохранить
        btnConfirm.addEventListener('click', async () => {
            const postData = {
                finances_id: selectedData.finance_id
            };

            modal.close();

            const result = await postDataRes('/supplier/saveProductBalance', postData);

            console.log(result);

            if (result === 'error' || !result.success) {
                openErrorModal('Не удалось сохранить товарный баланс!');
            } else {
                location.reload();
            }
        });
    </script>

{% endblock %}