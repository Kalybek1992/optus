    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css"/>

    <script>
        // Инициализация всех полей
        document.querySelectorAll('.datepicker_from, .datepicker_to').forEach(field => {
            new Pikaday({
                field: field,
                firstDay: 1,
                format: 'DD.MM.YYYY',
                i18n: {
                    previousMonth: 'Предыдущий',
                    nextMonth: 'Следующий',
                    months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                    weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                    weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
                },
                toString(date) {
                    const day = String(date.getDate()).padStart(2, '0');
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${day}.${month}.${year}`;
                },
                parse(dateString) {
                    const parts = dateString.split('.');
                    const day = parseInt(parts[0], 10);
                    const month = parseInt(parts[1], 10) - 1;
                    const year = parseInt(parts[2], 10);
                    return new Date(year, month, day);
                }
            });
        });

        // Модальное уведомление
        function showCornerModal(message) {
            const checkbox = document.getElementById('notifications');
            const txtModal = document.getElementById('notifications-txt');
            checkbox.checked = true;
            txtModal.innerHTML = message;
            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }

        const modal = document.getElementById('statusModal');
        const modalTitle = document.getElementById('statusTitle');
        const modalText = document.getElementById('statusText');
        const closeModalBtn = document.getElementById('closeModalBtn');

        const showModal = (title, text, success = false) => {
            modalTitle.textContent = title;
            modalText.textContent = text;
            modalTitle.className = success
                ? 'text-lg font-bold text-emerald-600'
                : 'text-lg font-bold text-red-600';
            try {
                modal.showModal();
            } catch (e) {
                alert(title + "\n\n" + text);
            }
        };

        // Закрытие по кнопке OK
        closeModalBtn.addEventListener('click', () => {
            if (modal.open) {
                modal.close();
            }
        });

        document.querySelectorAll('.search-filters').forEach(btn => {
            btn.addEventListener('click', () => {
                const container = btn.closest('.flex'); // ищем ближайший контейнер фильтра

                const dateFrom = container.querySelector('.datepicker_from');
                const dateTo = container.querySelector('.datepicker_to');

                if (!dateFrom.value && !dateTo.value) {
                    showCornerModal('Выберите фильтр');
                    return;
                }
                if (!dateFrom.value && dateTo.value) {
                    showCornerModal('Выберите начало даты!');
                    return;
                }

                const clientId = btn.getAttribute('data-entity-client_id');
                const params = new URLSearchParams();
                params.append('client_id', clientId);
                if (dateFrom.value) params.append('date_from', dateFrom.value);
                if (dateTo.value) params.append('date_to', dateTo.value);

                window.location.href = `/transaction/clientReceiptsDate?${params.toString()}`;
            });
        });


        document.addEventListener('DOMContentLoaded', () => {
            const ratesModal = document.getElementById('rates_modal');
            const cancelBtn = document.getElementById('rates_cancel');
            const confirmBtn = document.getElementById('rates_confirm');

            const transitInput = document.getElementById('rate_transit_new');
            const cashInput = document.getElementById('rate_cash_new');

            // утилиты
            const formatFloat = (num) => num.toFixed(2);

            let activeManagerId = null; // текущий менеджер

            // 1️⃣ клик по ставкам → открыть модалку
            document.querySelectorAll('[data-rate-input]').forEach(input => {
                input.addEventListener('click', () => {
                    // получаем manager_id прямо из атрибута
                    activeManagerId = input.dataset.managerId;

                    if (!activeManagerId) {
                        showModal?.('Ошибка!', 'Не удалось определить менеджера.');
                        return;
                    }

                    // очищаем инпуты
                    transitInput.value = '';
                    cashInput.value = '';

                    ratesModal.showModal();
                });
            });

            // 2️⃣ отмена
            cancelBtn.addEventListener('click', () => {
                ratesModal.close();
                transitInput.value = '';
                cashInput.value = '';
                activeManagerId = null;
            });

            // 3️⃣ сохранить
            confirmBtn.addEventListener('click', async () => {
                if (!activeManagerId) {
                    showModal?.('Ошибка!', 'Не выбран менеджер.');
                    return;
                }

                const body = {
                    manager_id: Number(activeManagerId),
                    date: null // даты у нас нет, всегда null
                };

                // значения из инпутов модалки
                const transitRateVal = transitInput.value.trim();
                const cashBetVal = cashInput.value.trim();

                // transit-rate
                if (transitRateVal !== '') {
                    const transitRateNum = Number(transitRateVal.replace(',', '.'));
                    if (Number.isNaN(transitRateNum) || transitRateNum < 0.01 || transitRateNum > 0.99) {
                        showModal?.('Ошибка!', 'Ставка транзит должна быть от 0.01 до 0.99.');
                        return;
                    }
                    body.transit_rate = formatFloat(transitRateNum);
                }

                // cash-bet
                if (cashBetVal !== '') {
                    const cashBetNum = Number(cashBetVal.replace(',', '.'));
                    if (Number.isNaN(cashBetNum) || cashBetNum < 0.01 || cashBetNum > 0.99) {
                        showModal?.('Ошибка!', 'Ставка кеш должна быть от 0.01 до 0.99.');
                        return;
                    }
                    body.cash_bet = formatFloat(cashBetNum);
                }

                // если что-то не ввели
                if (!body.transit_rate || !body.cash_bet) {
                    showModal?.('Ошибка!', 'Введите обе ставки.');
                    return;
                }

                console.log('POST body:', body);

                // ===== ОТПРАВКА =====
                const result = await postDataRes('/supplier/changeRatesManager', body);

                console.log(result);

                if (result.success) {
                    window.location.reload();
                } else {
