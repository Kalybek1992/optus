{% extends './Navbar/Navbar.twig' %}
{% block content %}
    {% include './Breadcrumb/GetClients.twig' %}
    {% for client in clients %}
        <!-- Карточка клиента -->
        <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
            <!-- Верхняя часть: имя, почта, действия -->
            <div class="space-y-4">
                <!-- Имя + кнопки справа -->
                <div class="flex items-center justify-between">
                    <div class="text-xl font-semibold text-gray-800">{{ client.name }}</div>
                    <div class="flex space-x-2">
                        <label
                                for="delete_account"
                                class="text-gray-500 hover:text-red-600 cursor-pointer"
                                title="Удалить"
                                role="button"
                                tabindex="0"
                                data-email="{{ client.email }}"
                                data-name="{{ client.name }}"
                                data-entity-user_id="{{ client.user_id }}">
                            <span class="text-xl"><i class="fa-solid fa-trash"></i></span>
                        </label>
                    </div>
                </div>

                <div class="p-4 bg-white rounded-xl shadow-sm text-sm uppercase space-y-2">


                    {# Товарный долг перед клиентом #}
                    {% if role == 'client' %}
                        <div class="flex justify-between items-center">
                            <div class="font-semibold text-gray-500">
                                Товарный долг перед клиентом
                            </div>
                            <div class="font-semibold text-gray-600 text-base">
                                {{ client.debit_amount_sum }}
                            </div>
                        </div>
                    {% endif %}

                    {# Процент #}
                    {% if role == 'client' %}
                        <div class="flex justify-between items-center">
                            <div class="font-semibold text-gray-500">
                                Процент
                            </div>
                            <div class="flex items-center font-semibold text-gray-600 text-base cursor-pointer">
                                {{ client.percentage }}%
                                <label for="change_percentage"
                                       title="Редактировать процент"
                                       class="cursor-pointer ml-2 w-6 h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                                       data-entity-user_id="{{ client.user_id }}"
                                       data-user-name="{{ client.name }}"
                                       data-old-percentage="{{ client.percentage }}"
                                >
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2"
                                         viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                              d="M11 5h2M12 4v2M4 20h16M16.5 3.5a2.121 2.121 0 113 3L12 14l-4 1 1-4 7.5-7.5z"/>
                                    </svg>
                                </label>
                            </div>
                        </div>

                        <!-- Общий контейнер -->
                        <div class="w-full flex justify-center">
                            <!-- Блок кнопок -->
                            <div class="w-full max-w-[320px] flex flex-col gap-3 items-center">

                                <!-- Отчет по клиентам -->
                                <a href="/supplier/supplierClientReceiptsDate?client_id={{ client.id }}"
                                   class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-4
                                    rounded-lg transition-colors duration-200 text-center shadow-sm">
                                    Отчет по клиентам
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    {% if role == 'manager' %}
                        <!-- Общий контейнер -->
                        <div class="w-full flex justify-center">
                            <!-- Блок кнопок -->
                            <div class="w-full max-w-[320px] flex flex-col gap-3 items-center">

                                <!-- Клиент услуги -->
                                <a href="/supplier/clientServicesManager?manager_id={{ client.id }}"
                                   class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-4
                                        rounded-lg transition-colors duration-200 text-center shadow-sm">
                                    Клиент услуги
                                </a>

                                <!-- Отчет по отгрузкам -->
                                <a href="/supplier/deliveredGoods?manager_id={{ client.id }}"
                                   class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-4
                                            rounded-lg transition-colors duration-200 text-center shadow-sm">
                                    Отчет по отгрузкам
                                </a>

                                <!-- Возврат отгрузки -->
                                <a href="/supplier/returnGoods?manager_id={{ client.id }}"
                                   class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-2 px-4
                                        rounded-lg transition-colors duration-200 text-center shadow-sm">
                                    Возврат отгрузки
                                </a>

