                                    <div class="flex items-center gap-6">
                                        <!-- Transit -->
                                        <div class="flex items-center gap-2">
                                                <span class="text-black font-semibold text-sm">
                                                    Ставка транзит:
                                                </span>
                                            <input
                                                    type="text"
                                                    value="{{ client.cash_bet }}"
                                                    data-manager-id="{{ client.id }}"
                                                    readonly
                                                    data-rate-input
                                                    class="w-[70px] px-2 py-1 border rounded-md bg-gray-100 text-gray-700 text-center text-sm cursor-pointer"
                                            />
                                        </div>

                                        <!-- Cash -->
                                        <div class="flex items-center gap-2">
                                                <span class="text-black font-semibold text-sm">
                                                    Ставка кеш:
                                                </span>
                                            <input
                                                    type="text"
                                                    value="{{ client.transit_rate }}"
                                                    data-manager-id="{{ client.id }}"
                                                    readonly
                                                    data-rate-input
                                                    class="w-[70px] px-2 py-1 border rounded-md bg-gray-100 text-gray-700 text-center text-sm cursor-pointer"
                                            />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    {% endif %}

