{% extends './Navbar/Navbar.twig' %}

{% block content %}

    {% include './Breadcrumb/GetTransactionDate.twig' %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">

        <div class="space-y-4 pl-4 mb-8">
            <!-- Кнопка скачать -->
            <div>
                <button
                        id="receipt-button"
                        onclick="downloadTableUniversal()"
                        class="relative flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg shadow-sm transition">

                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                    </svg>
                    <span class="button-text">Образовать таблицу</span>
                    <!-- Лоадер скрыт изначально -->
                    <span id="loader" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 pointer-events-none">
                        <span class="loading loading-dots loading-lg"></span>
                    </span>
                </button>
            </div>
        </div>

        <!-- Таблица расходов -->
        {% if transactions is empty %}
            <div role="alert" class="alert alert-warning mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Ничего не найдено</span>
            </div>
        {% else %}

            <!-- Заголовок темы таблицы -->
            <div class="text-center text-sm font-semibold text-gray-700">
                Все отправки поставщику {{ date_from }} по {{ date_to ?? '--.--.----' }}
                <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
            </div>

            <!-- Таблица -->
            <div class="hidden md:block overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm mt-4">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2 w-[140px]">Плательщик банк</th>
                        <th class="px-3 py-2 w-[140px]">Получатель название</th>
                        <th class="px-3 py-2 w-[60px]">Комиссия</th>
                        <th class="px-3 py-2 w-[120px]">Сумма</th>
                        <th class="px-3 py-2 w-[100px]">Комиссия деньгах</th>
                        <th class="px-3 py-2 w-[100px]">Долг поставщика</th>
                        <th class="px-3 py-2 w-[100px]">Выдал товарные д-г</th>
                        <th class="px-3 py-2 w-[100px]">Дата</th>
                        <th class="px-3 py-2 w-[100px]">Назначение</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for transaction in transactions %}
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2">{{ transaction.date }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.sender_bank_name }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.recipient_company_name }}</td>
                            <td class="px-3 py-2">{{ transaction.percent }} %</td>
                            <td class="px-3 py-2 bg-yellow-100">{{ transaction.transaction_amount|number_format(0, ',', ' ') }}</td>
                            <td class="px-3 py-2 bg-purple-100">{{ transaction.interest_income|number_format(0, ',', ' ') }}</td>
                            <td class="px-3 py-2 bg-green-100">{{ transaction.total_amount|number_format(0, ',', ' ') }}</td>
                            <td class="px-3 py-2 bg-lime-100">
                                {% if transaction.issuance is not empty %}
                                    {{ transaction.issuance
                                    | map(i => i.amount|number_format(0, ',', ' '))
                                    | join(', ')
                                    }}
                                {% else %}
                                    0
                                {% endif %}
                            </td>
                            <td class="px-3 py-2">
                                {% if transaction.issuance is not empty %}
                                    {{ transaction.issuance | map(i => i.issue_date | date('d.m.Y')) | join(', ') }}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td class="px-3 py-2">{{ transaction.description }}</td>
                        </tr>
                    {% endfor %}
                    <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                        <td class="px-3 py-2">Сумма</td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2 bg-yellow-100">{{ transactions_sum.sum_amount|number_format(0, ',', ' ') }}</td>
                        <td class="px-3 py-2 bg-purple-100">{{ transactions_sum.sum_interest_income|number_format(0, ',', ' ') }}</td>
                        <td class="px-3 py-2 bg-green-100">{{ transactions_sum.debts_amount|number_format(0, ',', ' ') }}</td>
                        <td class="px-3 py-2 bg-lime-100">{{ transactions_sum.debts_issuance|number_format(0, ',', ' ') }}</td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                    </tr>
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">Плательщик банк</th>
                        <th class="px-3 py-2">Получатель название</th>
                        <th class="px-3 py-2">Комиссия</th>
                        <th class="px-3 py-2">Сумма</th>
                        <th class="px-3 py-2">Комиссия деньгах</th>
                        <th class="px-3 py-2">Долг поставщика</th>
                        <th class="px-3 py-2">Выдал товарные д-г</th>
                        <th class="px-3 py-2 w-[100px]">Дата</th>
                        <th class="px-3 py-2">Назначение</th>
                    </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Мобильные карточки -->
            <div class="lg:hidden space-y-4 mt-4">
                {% for transaction in transactions %}
                    <div class="border border-gray-200 rounded-lg p-3 shadow-sm bg-white text-[13px] space-y-3">

                        <!-- Дата -->
                        <div>
                            <div class="text-gray-500 text-xs">Дата</div>
                            <div class="font-medium">{{ transaction.date }}</div>
                        </div>

                        <!-- Плательщик банк -->
                        <div>
                            <div class="text-gray-500 text-xs">Плательщик банк</div>
                            <div class="text-[11px] break-all">{{ transaction.sender_bank_name }}</div>
                        </div>

                        <!-- Получатель -->
                        <div>
                            <div class="text-gray-500 text-xs">Получатель</div>
                            <div class="text-[11px] break-all">{{ transaction.recipient_company_name }}</div>
                        </div>

                        <!-- Комиссия % -->
                        <div>
                            <div class="text-gray-500 text-xs">Комиссия</div>
                            <div>{{ transaction.percent }} %</div>
                        </div>

                        <!-- Сумма -->
                        <div class="bg-yellow-50 px-2 py-1 rounded">
                            <div class="text-gray-600 text-xs">Сумма</div>
                            <div class="font-semibold">
                                {{ transaction.transaction_amount|number_format(0, ',', ' ') }}
                            </div>
                        </div>

                        <!-- Комиссия в деньгах -->
                        <div class="bg-purple-50 px-2 py-1 rounded">
                            <div class="text-gray-600 text-xs">Комиссия ₽</div>
                            <div class="font-semibold">
                                {{ transaction.interest_income|number_format(0, ',', ' ') }}
                            </div>
                        </div>

                        <!-- Долг поставщика -->
                        <div class="bg-green-50 px-2 py-1 rounded">
                            <div class="text-gray-600 text-xs">Долг поставщика</div>
                            <div class="font-semibold">
                                {{ transaction.total_amount|number_format(0, ',', ' ') }}
                            </div>
                        </div>

                        <!-- Выдал товарные деньги -->
                        <div class="bg-lime-50 px-2 py-1 rounded">
                            <div class="text-gray-600 text-xs">Выдал товарные д-г</div>
                            <div class="font-semibold">
                                {% if transaction.issuance is not empty %}
                                    {{ transaction.issuance
                                    | map(i => i.amount|number_format(0, ',', ' '))
                                    | join(', ')
                                    }}
                                {% else %}
                                    0
                                {% endif %}
                            </div>
                        </div>

                        <!-- Дата выдачи -->
                        <div class="px-2 py-1 rounded border border-gray-100">
                            <div class="text-gray-600 text-xs">Дата выдачи</div>
                            <div class="font-medium">
                                {% if transaction.issuance is not empty %}
                                    {{ transaction.issuance
                                    | map(i => i.issue_date | date('d.m.Y'))
                                    | join(', ')
                                    }}
                                {% else %}
                                    –
                                {% endif %}
                            </div>
                        </div>

                        <!-- Назначение -->
                        <div>
                            <div class="text-gray-500 text-xs">Назначение</div>
                            <div class="text-[11px] break-all">
                                {{ transaction.description }}
                            </div>
                        </div>

                    </div>
                {% endfor %}

                <!-- Итоги (мобильные) -->
                <div class="border border-gray-300 rounded-lg p-3 bg-gray-50 shadow-sm space-y-2">
                    <div class="bg-yellow-100 px-2 py-1 rounded">
                        <div class="font-semibold text-xs text-gray-700">Общая сумма</div>
                        <div>{{ transactions_sum.sum_amount|number_format(0, ',', ' ') }}</div>
                    </div>

                    <div class="bg-purple-100 px-2 py-1 rounded">
                        <div class="font-semibold text-xs text-gray-700">Комиссия ₽</div>
                        <div>{{ transactions_sum.sum_interest_income|number_format(0, ',', ' ') }}</div>
                    </div>

                    <div class="bg-green-100 px-2 py-1 rounded">
                        <div class="font-semibold text-xs text-gray-700">Долг поставщика</div>
                        <div>{{ transactions_sum.debts_amount|number_format(0, ',', ' ') }}</div>
                    </div>

                    <div class="bg-lime-100 px-2 py-1 rounded">
                        <div class="font-semibold text-xs text-gray-700">Выдано товарных д-г</div>
                        <div>{{ transactions_sum.debts_issuance|number_format(0, ',', ' ') }}</div>
                    </div>
                </div>
            </div>

        {% endif %}
    </div>

    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>

    <input type="checkbox" id="cornerModal" class="hidden peer" />
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-4 w-80 z-50 hidden peer-checked:flex peer-checked:flex-col">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-lg font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-sm text-gray-600"></p>
            </div>
            <label for="cornerModal" class="ml-4 text-gray-400 hover:text-gray-600 cursor-pointer">✕</label>
        </div>
    </div>

    <!-- Инициализация -->

    {% include './Unloading/Unloading.twig' %}
    <script>
        function showCornerModal(message) {
            const checkbox = document.getElementById('cornerModal');
            const txtModal = document.getElementById('txtModal');
            checkbox.checked = true;
            txtModal.innerHTML= message;


            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }

        const pickerFrom = new Pikaday({
            field: document.getElementById('datepicker_from'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });

        const pickerTo = new Pikaday({
            field: document.getElementById('datepicker_to'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });


        document.getElementById('searchFilters').addEventListener('click', () => {
            const category = document.getElementById('category')?.textContent.trim();
            const dateFrom = document.getElementById('datepicker_from');
            const datepickerTo = document.getElementById('datepicker_to');

            if (!category && !dateFrom.value && !datepickerTo.value) {
                showCornerModal('Выберите фильтр');
                return;
            }

            if (!dateFrom.value && datepickerTo.value) {
                showCornerModal('Выберите начало даты!');
                return;
            }


            const params = new URLSearchParams();

            if (category) params.append('category', category);
            if (dateFrom.value) params.append('date_from', dateFrom.value);
            if (datepickerTo.value) params.append('date_to', datepickerTo.value);

            window.location.href = `/supplier/getExpenses?${params.toString()}`;
        });
    </script>




{% endblock %}
