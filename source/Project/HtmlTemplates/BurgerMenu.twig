{% block content %}


    <div class="drawer">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-side">
            <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay">Меню</label>
            <div class="flex flex-col lg:flex-row gap-4 items-start">
                <ul class="menu bg-base-200 w-72 p-2 rounded-box shadow-md space-y-1">
                    <!-- Загрузка выписки -->
                    {% if unknown_accounts == 0 %}
                        <li>
                            <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                     stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m.75 12 3 3m0 0 3-3m-3 3v-6m-1.5-9H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z"/>
                                </svg>
                                Загрузка выписки
                            </div>
                            <ul class="pl-8 py-1 space-y-1">
                                <li>
                                    <a class="block px-2 py-1 rounded-md hover:bg-base-300" onclick="my_modal_2.showModal()">TXT-файл</a>
                                </li>
                            </ul>
                        </li>
                    {% endif %}

                    <!-- Транзакции -->
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-6">
                                <path strokeLinecap="round" strokeLinejoin="round"
                                      d="m20.25 7.5-.625 10.632a2.25 2.25 0 0 1-2.247 2.118H6.622a2.25 2.25 0 0 1-2.247-2.118L3.75 7.5m8.25 3v6.75m0 0-3-3m3 3 3-3M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125Z"/>
                            </svg>
                            Транзакции
                            {% if unknown_accounts > 0 or pending_orders > 0 %}
                                <span class="badge badge-error ml-auto text-white font-bold">!</span>
                            {% endif %}
                        </div>

                        <ul class="pl-8 py-1 space-y-1">
                            {% if unknown_accounts > 0 %}
                                <li>
                                    <a href="entities/unknownAccounts" class="block px-2 py-1 rounded-md hover:bg-base-300">
                                        Неизвестные счета <span class="badge ml-auto">{{ unknown_accounts }}</span>
                                    </a>
                                </li>
                            {% endif %}
                            {% if pending_orders > 0 %}
                                <li>
                                    <a href="entities/unknownBankOrder"
                                       class="block px-2 py-1 rounded-md hover:bg-base-300">
                                        Банковские ордера <span class="badge ml-auto">{{ pending_orders }}</span>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>

                    <!-- Пользователи -->
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-6">
                                <path strokeLinecap="round" strokeLinejoin="round"
                                      d="M15 19.128a9.38 9.38 0 0 0 2.625.372 9.337 9.337 0 0 0 4.121-.952 4.125 4.125 0 0 0-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 0 1 8.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0 1 11.964-3.07M12 6.375a3.375 3.375 0 1 1-6.75 0 3.375 3.375 0 0 1 6.75 0Zm8.25 2.25a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z"/>
                            </svg>
                            Пользователи
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li>
                                <a href="/user/getAdministrators" class="block px-2 py-1 rounded-md hover:bg-base-300">Администраторы</a>
                            </li>
                            <li>
                                <a href="/user/getClients" class="block px-2 py-1 rounded-md hover:bg-base-300">Клиенты</a>
                            </li>
                            <li>
                                <a href="/user/getClientServices" class="block px-2 py-1 rounded-md hover:bg-base-300">Клиент услуги</a>
                            </li>
                            <li>
                                <a href="/user/getSuppliers" class="block px-2 py-1 rounded-md hover:bg-base-300">Поставщики</a></li>
                            <li>
                                <a href="/user/getCouriers" class="block px-2 py-1 rounded-md hover:bg-base-300">Курьеры</a>
                            </li>
                            <li>
                                <a href="/user/getShop" class="block px-2 py-1 rounded-md hover:bg-base-300">Магазины</a>
                            </li>
                            <li>
                                <a href="/user/addUser" class="block px-2 py-1 rounded-md hover:bg-base-300">Добавить пользователя</a>
                            </li>
                        </ul>
                    </li>
                    <!-- Пользователи -->
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 2.994v2.25m10.5-2.25v2.25m-14.252 13.5V7.491a2.25 2.25 0 0 1 2.25-2.25h13.5a2.25 2.25 0 0 1 2.25 2.25v11.251m-18 0a2.25 2.25 0 0 0 2.25 2.25h13.5a2.25 2.25 0 0 0 2.25-2.25m-18 0v-7.5a2.25 2.25 0 0 1 2.25-2.25h13.5a2.25 2.25 0 0 1 2.25 2.25v7.5m-6.75-6h2.25m-9 2.25h4.5m.002-2.25h.005v.006H12v-.006Zm-.001 4.5h.006v.006h-.006v-.005Zm-2.25.001h.005v.006H9.75v-.006Zm-2.25 0h.005v.005h-.006v-.005Zm6.75-2.247h.005v.005h-.005v-.005Zm0 2.247h.006v.006h-.006v-.006Zm2.25-2.248h.006V15H16.5v-.005Z" />
                            </svg>
                            Планировщик платежей
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li>
                                <a href="/scheduler/addScheduler" class="block px-2 py-1 rounded-md hover:bg-base-300">Создать план</a>
                            </li>
                            <li>
                                <a href="/scheduler/allSchedule" class="block px-2 py-1 rounded-md hover:bg-base-300">Список планов</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"/>
                            </svg>
                            Наши компания
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li>
                                <a href="/entities/getOurEntities" class="block px-2 py-1 rounded-md hover:bg-base-300">
                                    Список компаний
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Карты -->
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M2.25 8.25h19.5M2.25 9h19.5m-16.5 5.25h6m-6 2.25h3m-3.75 3h15a2.25 2.25 0 0 0 2.25-2.25V6.75A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25v10.5A2.25 2.25 0 0 0 4.5 19.5Z"/>
                            </svg>
                            Карты
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li><a class="block px-2 py-1 rounded-md hover:bg-base-300" id="open-create-card-modal">
                                    Создать карту
                                </a>
                            </li>
                            <li>
                                <a href="/debts/getMutualSettlements" class="block px-2 py-1 rounded-md hover:bg-base-300">
                                    Список карт
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Расходы -->
                    <li>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
                            </svg>
                            Финансы
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li>
                                <a href="/transaction/distributionCommodityMoney" class="block px-2 py-1 rounded-md hover:bg-base-300">Товарными деньги</a>
                            </li>
                            <li>
                                <a href="/categories/pageCategories" class="block px-2 py-1 rounded-md hover:bg-base-300">Категории</a>
                            </li>
                            <li>
                                <a href="/transaction/getExpenses" class="block px-2 py-1 rounded-md hover:bg-base-300">Расходы</a>
                            </li>
                            <li>
                                <a href="/transaction/getTransferYourself" class="block px-2 py-1 rounded-md hover:bg-base-300">Переводы на себя</a>
                            </li>
                            <li>
                                <a href="/transaction/getExpensesStockBalances" class="block px-2 py-1 rounded-md hover:bg-base-300">Транзакций товарный баланс</a>
                            </li>
                            <li>
                                <a href="/debts/getMutualSettlements" class="block px-2 py-1 rounded-md hover:bg-base-300">Взаиморасчеты</a>
                            </li>

                            <li>
                                <a href="/transaction/supplierReports" class="block px-2 py-1 rounded-md hover:bg-base-300">Отчет по поставшикам</a>
                            </li>
                            <li>
                                <a href="/transaction/supplierScan" class="block px-2 py-1 rounded-md hover:bg-base-300">Развертка</a>
                            </li>
                        </ul>
                        <div class="flex items-center gap-2 px-3 py-2 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                                 stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                      d="M10.05 4.575a1.575 1.575 0 1 0-3.15 0v3m3.15-3v-1.5a1.575 1.575 0 0 1 3.15 0v1.5m-3.15 0 .075 5.925m3.075.75V4.575m0 0a1.575 1.575 0 0 1 3.15 0V15M6.9 7.575a1.575 1.575 0 1 0-3.15 0v8.175a6.75 6.75 0 0 0 6.75 6.75h2.018a5.25 5.25 0 0 0 3.712-1.538l1.732-1.732a5.25 5.25 0 0 0 1.538-3.712l.003-2.024a.668.668 0 0 1 .198-.471 1.575 1.575 0 1 0-2.228-2.228 3.818 3.818 0 0 0-1.12 2.687M6.9 7.575V12m6.27 4.318A4.49 4.49 0 0 1 16.35 15m.002 0h-.002"/>
                            </svg>
                            Не трогайте
                        </div>
                        <ul class="pl-8 py-1 space-y-1">
                            <li><a href="/user/testDellDb" class="block px-2 py-1 rounded-md hover:bg-base-300">Удалить
                                    записи</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>


{% endblock %}

