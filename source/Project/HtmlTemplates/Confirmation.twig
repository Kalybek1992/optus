{% block content %}
    <div class="max-w-8xl mx-auto space-y-10">

        {# ==================== Загрузки с ошибками ==================== #}
        {% if error_uploads is not empty %}
            <div class="bg-white rounded-2xl shadow-lg p-6 relative">
                <div class="text-center text-sm font-semibold text-red-700 mb-6">
                        Загрузки с ошибками
                    <div class="mx-auto w-1/2 border-t border-gray-300 mt-4 mb-4"></div>
                </div>

                {# ==================== Desktop table ==================== #}
                <div class="hidden md:block overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                    <table class="table w-full text-sm text-left divide-x divide-gray-200">
                        <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2">Компания</th>
                            <th class="px-3 py-2">Дата</th>
                            <th class="px-3 py-2">Время</th>
                            <th class="px-3 py-2">Последние действия/th>
                            <th class="px-3 py-2 text-center">Действие</th>
                        </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                        {% for item in error_uploads %}
                            <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                                <td class="px-3 py-2 bg-gray-50 font-bold text-gray-700">
                                    {{ item.company_name }}
                                </td>
                                <td class="px-3 py-2">
                                    {{ item.date }}
                                </td>
                                <td class="px-3 py-2">
                                    {{ item.time }}
                                </td>
                                <td class="px-3 py-2">
                                    {{ item.recent_activities }}
                                </td>
                                <td class="px-3 py-2 text-center">
                                    <button
                                            class="btn text-white bg-red-600 hover:bg-red-700 px-4 py-2 rounded-md text-sm font-medium transition"
                                            data-id="{{ item.id }}"
                                            onclick="rollbackErrorUpload(this)">
                                        Откатить
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# ==================== Mobile cards ==================== #}
                <div class="md:hidden space-y-4">
                    {% for item in error_uploads %}
                        <div class="border border-gray-200 rounded-lg shadow-sm p-4">
                            <div class="text-xs font-semibold mb-1">
                                <span class="font-bold text-gray-700">Компания:</span>
                                {{ item.company_name }}
                            </div>
                            <div class="text-xs font-semibold mb-1">
                                <span class="font-bold">Дата:</span>
                                {{ item.date }}
                            </div>
                            <div class="text-xs font-semibold mb-3">
                                <span class="font-bold">Время:</span>
                                {{ item.time }}
                            </div>
                            <div class="text-xs font-semibold mb-3">
                                <span class="font-bold">Последние действия:</span>
                                {{ recent_activities.time }}
                            </div>
