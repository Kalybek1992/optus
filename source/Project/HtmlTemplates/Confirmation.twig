                            <th class="px-3 py-2">Дата</th>
                            <th class="px-3 py-2 text-center">Подтверждение</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        {% endif %}

        {% if courier_income_other is not empty %}
