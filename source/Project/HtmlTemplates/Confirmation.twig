{% block content %}
    <div class="max-w-8xl mx-auto space-y-10">
        {% if confirmation_costs_courier is not empty %}
            <div class="bg-white rounded-2xl shadow-lg p-6 relative">
                <div class="text-center text-sm font-semibold text-gray-700 mb-6">
                    Подтвердить расход курьера!
                    <div class="mx-auto w-1/2 border-t border-gray-300 mt-4 mb-4"></div>
                </div>

                <div class="overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                    <table class="table w-full text-sm text-left divide-x divide-gray-200">
                        <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2">Курьер</th>
                            <th class="px-3 py-2">Комментарии</th>
                            <th class="px-3 py-2">Категории</th>
                            <th class="px-3 py-2">Сумма</th>
                            <th class="px-3 py-2">Дата</th>
                            <th class="px-3 py-2 text-center">Подтверждение</th>
                        </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                        {% for confirmation in confirmation_costs_courier %}
                            <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                                <td class="px-3 py-2 bg-green-100 font-bold italic text-gray-700">{{ confirmation.name }}</td>
                                <td class="px-3 py-2 bg-yellow-100 font-bold italic text-gray-700">{{ confirmation.comments }}</td>
                                <td class="px-3 py-2 bg-purple-100 font-bold italic text-gray-700">{{ confirmation.category }}</td>
                                <td class="px-3 py-2 bg-purple-100 font-bold italic text-gray-700">{{ confirmation.amount }}</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">{{ confirmation.date }}</td>
                                <td class="px-3 py-2 text-center">
                                    <div class="flex justify-center gap-2">
                                        <button class="btn text-white bg-green-600 hover:bg-green-700 px-4 py-2 rounded-md text-sm font-medium transition"
                                                data-id="{{ confirmation.id }}"
                                                data-action="consumption"
                                                onclick="openConfirmModal(this, 'courier')">
                                            Подтвердить
                                        </button>
                                        <button class="btn text-white bg-red-600 hover:bg-red-700 px-4 py-2 rounded-md text-sm font-medium transition"
                                                data-id="{{ confirmation.id }}"
                                                data-action="consumption"
                                                onclick="cancelCourierExpense(this, 'courier')">
                                            Отменить
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2">Курьер</th>
                            <th class="px-3 py-2">Комментарии</th>
                            <th class="px-3 py-2">Категории</th>
                            <th class="px-3 py-2">Сумма</th>
                            <th class="px-3 py-2">Дата</th>
                            <th class="px-3 py-2 text-center">Подтверждение</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        {% endif %}

        {% if return_debit_courier is not empty %}
            <div class="bg-white rounded-2xl shadow-lg p-6 relative">
