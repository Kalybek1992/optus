{% extends './Navbar/Navbar.twig' %}

{% block content %}

    {% include './Breadcrumb/ShopReceiptsDate.twig' %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">

        <div class="space-y-4 pl-4 mb-8">
            <!-- Имя -->
            <div class="flex items-center justify-between">
                <div class="text-base font-semibold text-gray-800">
                    Магазин: {{ shop.username }}
                </div>
            </div>

            <!-- Кнопка скачать -->
            <div>
                <button
                        id="receipt-button"
                        onclick="downloadTable()"
                        class="relative flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg shadow-sm transition"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                    </svg>
                    <span class="button-text">Образовать таблицу</span>
                    <!-- Лоадер скрыт изначально -->
                    <span id="loader" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 pointer-events-none">
                        <span class="loading loading-dots loading-lg"></span>
                    </span>
                </button>
            </div>
        </div>

        <!-- Таблица расходов -->
        {% if transactions is empty %}
            <div role="alert" class="alert alert-warning mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Ничего не найдено</span>
            </div>
        {% else %}

            <!-- Заголовок темы таблицы -->
            <div class="text-center text-sm font-semibold text-gray-700">
                Все транзакции магазина {{ date_from ?? '--.--.----' }} по {{ date_to ?? '--.--.----' }}
                <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
            </div>

            <!-- Таблица -->
            <div class="overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">№</th>
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">Плательщик названия</th>
                        <th class="px-3 py-2">Плательщик банк</th>
                        <th class="px-3 py-2">Получатель название</th>
                        <th class="px-3 py-2">Получатель банк</th>
                        <th class="px-3 py-2">Сумма</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for transaction in transactions %}
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2">{{ transaction.transaction_id }}</td>
                            <td class="px-3 py-2">{{ transaction.date }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.sender_company_name }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.sender_bank_name }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.recipient_company_name }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.recipient_bank_name }}</td>
                            <td class="px-3 py-2 bg-yellow-100">{{ transaction.transaction_amount }}</td>
                        </tr>
                    {% endfor %}

                    <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                        <td class="px-3 py-2">Сумма</td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2 bg-yellow-100">{{ transactions_sum.sum_amount }}</td>
                    </tr>
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">№</th>
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">Плательщик названия</th>
                        <th class="px-3 py-2">Плательщик банк</th>
                        <th class="px-3 py-2">Получатель название</th>
                        <th class="px-3 py-2">Получатель банк</th>
                        <th class="px-3 py-2">Сумма</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        {% endif %}
    </div>

    <input type="checkbox" id="cornerModal" class="hidden peer" />
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-4 w-80 z-50 hidden peer-checked:flex peer-checked:flex-col">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-lg font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-sm text-gray-600">Пользователь успешно добавлен.</p>
            </div>
            <label for="cornerModal" class="ml-4 text-gray-400 hover:text-gray-600 cursor-pointer">✕</label>
        </div>
    </div>


    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    <script src="/assets/js/PostData.js?v=<?= time() ?>"></script>

    <script>
        function getUrlParams() {
            const params = {};
            const search = new URLSearchParams(window.location.search);
            for (const [key, value] of search.entries()) {
                params[key] = value;
            }
            return params;
        }

        function showCornerModal(message) {
            const checkbox = document.getElementById('cornerModal');
            const txtModal = document.getElementById('txtModal');
            checkbox.checked = true;
            txtModal.innerHTML = message;

            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }



        async function downloadTable() {
            const btn = document.getElementById('receipt-button');
            const loader = document.getElementById('loader');
            const textSpan = btn.querySelector('.button-text');

            // Делаем кнопку не кликабельной и меняем фон
            btn.disabled = true;
            btn.classList.add('bg-blue-500', 'opacity-80'); // чуть серый фон
            loader.classList.remove('opacity-0');
            loader.classList.add('opacity-100', 'pointer-events-auto');
            textSpan.classList.add('opacity-0'); // скрываем текст, чтобы лоадер в центре

            const params = getUrlParams();
            const result = await postData('/unloading/shopReceiptsDate', params);

            // После ответа возвращаем кнопку в нормальное состояние
            btn.disabled = false;
            btn.classList.remove('bg-blue-500', 'opacity-80');
            loader.classList.remove('opacity-100', 'pointer-events-auto');
            loader.classList.add('opacity-0');
            textSpan.classList.remove('opacity-0');

            if (!result || result.error || result.status === 'error') {
                btn.disabled = false;
                btn.classList.remove('opacity-80');
                loader.classList.remove('opacity-100', 'pointer-events-auto');
                loader.classList.add('opacity-0');
                textSpan.classList.remove('opacity-0');
                showCornerModal('Не удалось образовать файл!');
                return;
            }

            if (result.file) {
                const originalName = result.file.split('/').pop();

                btn.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                    </svg>
                    Скачать таблицу
                `;

                btn.onclick = function () {
                    const link = document.createElement('a');
                    link.href = '/unloading/downloadFile?file=' + encodeURIComponent(result.file);
                    link.download = originalName;
                    document.body.appendChild(link);
                    link.click();
                    document.body.removeChild(link);
                };
            } else {
                // Возвращаем кнопку в исходное состояние при ошибке
                btn.disabled = false;
                btn.classList.remove('opacity-80');
                loader.classList.remove('opacity-100', 'pointer-events-auto');
                loader.classList.add('opacity-0');
                textSpan.classList.remove('opacity-0');
                showCornerModal('Не найдена в файл для скачивания!');
            }
        }

    </script>




{% endblock %}
