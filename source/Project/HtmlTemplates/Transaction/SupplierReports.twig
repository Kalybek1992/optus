{% extends './Navbar/Navbar.twig' %}

{% block content %}

    {% include './Breadcrumb/SupplierReports.twig' %}

    <!-- Формировать выборов дату и поставщика  -->
    <div class="w-full max-w-8xl mx-auto space-y-4 my-10 px-10">
        <div class="flex flex-col md:flex-row md:items-center gap-4">

            <!-- Выбор поставщика -->
            <div x-data="{
                selectedSuppler: null,
                openSupplerList: false
            }" class="relative space-y-4">

                <button @click="openSupplerList = !openSupplerList"
                        class="h-12 w-80 px-4 text-left border border-gray-300 bg-gray-50 text-gray-700 hover:bg-blue-100 rounded-xl flex items-center justify-between transition">
                    <template x-if="!selectedSuppler">
                        <span>Выберите поставщика</span>
                    </template>
                    <template x-if="selectedSuppler">
                        <span x-text="selectedSuppler.name"></span>
                    </template>
                    <svg class="w-4 h-4 ml-2 text-gray-400" fill="none" stroke="currentColor"
                         stroke-width="2" viewBox="0 0 24 24">
                        <path d="M19 9l-7 7-7-7"/>
                    </svg>
                </button>

                <input type="hidden" name="suppler_id" :value="selectedSuppler?.id">
                <input type="hidden" name="suppler_name" :value="selectedSuppler?.name">

                <div x-show="openSupplerList"
                     @click.outside="openSupplerList = false"
                     class="absolute mt-2 w-80 z-50 bg-white border border-gray-200 rounded-xl shadow-xl p-2 space-y-1 transition-all duration-300"
                     x-transition>
                    {% for supplier in suppliers %}
                        <div @click="selectedSuppler = { id: {{ supplier.supplier_id }}, name: '{{ supplier.username }}' }; openSupplerList = false"
                             class="cursor-pointer px-4 py-2 rounded-md hover:bg-gray-100 transition text-sm flex flex-col">
                            <span class="font-medium text-gray-900">{{ supplier.username }}</span>
                            <span class="text-gray-600 text-xs truncate">{{ supplier.email }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Дата "от" -->
            {% include './FilterData/DateSearch.twig' %}
        </div>
    </div>

    {% if transactions is not empty %}
        <!-- Блок: Расчёт -->
        <div class="mt-10 px-10">
            <h2 class="text-lg font-bold text-gray-800 mb-6 text-center">Расчёт</h2>
            <!-- Информативные окна вертикально -->
            <div class="flex flex-wrap gap-4 mb-6">
                <!-- Сумма отправленного на шину -->
                <div class="bg-green-50 border border-green-200 rounded-md px-4 py-3 w-64 shadow-sm">
                    <div class="text-xs text-gray-600">Сумма отправленного на шину</div>
                    <div class="text-sm font-semibold text-green-700">{{ transactions_sum.sum_amount|number_format(2, ',', ' ') }} ₽</div>
                </div>

                <!-- Долг по транзиту -->
                <div class="bg-red-50 border border-red-200 rounded-md px-4 py-3 w-64 shadow-sm">
                    <div class="text-xs text-gray-600">Долг по транзиту</div>
                    <div class="text-sm font-semibold text-red-700">{{ transit_debt_amount }} ₽</div>
                </div>

                <!-- Зашло транзита -->
                <div class="bg-blue-50 border border-blue-200 rounded-md px-4 py-3 w-64 shadow-sm">
                    <div class="text-xs text-gray-600">Зашло транзита</div>
                    <div class="text-sm font-semibold text-blue-700">{{ transit_amount }} ₽</div>
                </div>
            </div>

            <!-- Таблица с расчётом -->
            <div class="flex border-t border-b border-gray-200 rounded-lg shadow-sm overflow-hidden">
                <!-- Левая часть таблицы -->
                <div class="flex-1 overflow-x-auto">
                    <table class="table w-full text-sm text-left divide-y divide-gray-100">
                        <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr>
                            <th class="px-3 py-2 w-[25%]">Описание</th>
                            <th class="px-3 py-2 text-center">Сумма</th>
                            <th class="px-3 py-2 text-center">%</th>
                            <th class="px-3 py-2 text-center">Итог</th>
                        </tr>
                        </thead>

                        <tbody class="text-sm divide-y divide-gray-100">
                        <tbody class="text-sm divide-y divide-gray-100">
                        {% for row in transactions_by_percentage %}
                            <tr class="{% if row.percent == 6 %}bg-green-50{% elseif row.percent == 9 %}bg-blue-50{% else %}bg-yellow-50{% endif %}">
                                <td class="px-3 py-2">Cумма с которой `{{ user_name }}` получает комиссия {{ row.percent }}%</td>  {# описание пока просто "M" #}
                                <td class="px-3 py-2 text-center font-bold text-gray-700">{{ row.total_amount|number_format(2, ',', ' ') }} ₽</td>
                                <td class="px-3 py-2 text-center font-bold text-gray-700">{{ row.percent }}%</td>
                                <td class="px-3 py-2 text-center font-bold text-gray-700">{{ row.clean_amount|number_format(2, ',', ' ') }} ₽</td>
                            </tr>
                        {% endfor %}

                        <tr class="bg-red-50">
                            <td class="px-3 py-2">Долг по кеш на конец дня {{ date_to ?? '--.--.----' }}</td>
                            <td class="px-3 py-2 text-center font-bold text-gray-700">{{ debt_up_to_this_point }} ₽</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Правая часть общих значений -->
                <div class="w-[35%] bg-gray-50 flex flex-col justify-between divide-y divide-gray-200">
                    <div class="px-4 py-3 text-center">
                        <div class="text-xs uppercase text-gray-500 font-semibold">Выдано всего кеша</div>
                        <div class="text-lg font-bold text-blue-700">90 000 ₽</div>
                    </div>
                    <div class="px-4 py-3 text-center">
                        <div class="text-xs uppercase text-gray-500 font-semibold">Выдано кеш</div>
                        <div class="text-lg font-bold text-green-700">125 000 ₽</div>
                    </div>
                    <div class="px-4 py-3 text-center">
                        <div class="text-xs uppercase text-gray-500 font-semibold">Долг товарные деньги</div>
                        <div class="text-lg font-bold text-red-700">80 000 ₽</div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
        <!-- Таблица расходов -->
        {% if transactions is empty %}
            <div role="alert" class="alert alert-warning mt-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                     viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Ничего не сформировано или не найдено записи</span>
            </div>
        {% else %}
            <!-- Заголовок темы таблицы -->
            <div class="text-center text-sm font-semibold text-gray-700">
                Все отправки поставщику {{ date_from }} по {{ date_to ?? '--.--.----' }}
                <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
            </div>

            <!-- Таблица -->
            <div class="overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">Плательщик названия</th>
                        <th class="px-3 py-2">Получатель название</th>
                        <th class="px-3 py-2">Комиссия</th>
                        <th class="px-3 py-2">Сумма</th>
                        <th class="px-3 py-2">Назначение</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for transaction in transactions %}
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2">{{ transaction.date }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.sender_company_name }}</td>
                            <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.recipient_company_name }}</td>
                            <td class="px-3 py-2">
                                {% if transaction.percent == 0 %}
                                    {{ transaction.percent }}%
                                {% else %}
                                    <span
                                            data-transaction-id="{{ transaction.transaction_id }}"
                                            data-legal-id="{{ transaction.legal_id }}"
                                            data-transaction-date="{{ transaction.date }}"
                                            data-transaction-percent="{{ transaction.percent }}"
                                            data-transaction-amount="{{ transaction.transaction_amount }}"
                                            data-transaction-interest_income="{{ transaction.interest_income }}"
                                            data-transaction-total_amount="{{ transaction.total_amount }}"
                                            class="change-percentage cursor-pointer font-semibold text-blue-600 hover:underline font-medium">
                                        {{ transaction.percent }}%
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-3 py-2 bg-yellow-100">{{ transaction.transaction_amount }}</td>
                            <td class="px-3 py-2">{{ transaction.description }}</td>
                        </tr>
                    {% endfor %}
                    <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                        <td class="px-3 py-2">Сумма</td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2"></td>
                        <td class="px-3 py-2 bg-yellow-100">{{ transactions_sum.sum_amount }}</td>
                        <td class="px-3 py-2"></td>
                    </tr>
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2 w-28">Дата</th>
                        <th class="px-3 py-2">Плательщик названия</th>
                        <th class="px-3 py-2">Получатель название</th>
                        <th class="px-3 py-2">Комиссия</th>
                        <th class="px-3 py-2">Сумма</th>
                        <th class="px-3 py-2">Назначение</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        {% endif %}
    </div>

    <input type="checkbox" id="cornerModal" class="hidden peer"/>
    <div class="fixed bottom-4 right-4 bg-white border shadow-lg rounded-lg p-4 w-80 z-50 hidden peer-checked:flex peer-checked:flex-col">
        <div class="flex items-start justify-between">
            <div>
                <h3 class="text-lg font-semibold">Уведомление</h3>
                <p id="txtModal" class="text-sm text-gray-600">Пользователь успешно добавлен.</p>
            </div>
            <label for="cornerModal" class="ml-4 text-gray-400 hover:text-gray-600 cursor-pointer">✕</label>
        </div>
    </div>

    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>


    <dialog id="percentModal" class="modal">
        <div class="modal-box">
            <form id="upload_form" class="flex flex-col">
                <h3 id="modal-title" class="text-lg font-semibold text-center mb-4">Установить новый процент</h3>

                <label id="percentage-label"
                       class="input w-full mb-4 flex items-center gap-2 border rounded-md p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                         stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="m8.99 14.993 6-6m6 3.001c0 1.268-.63 2.39-1.593 3.069a3.746 3.746 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043 3.745 3.745 0 0 1-3.068 1.593c-1.268 0-2.39-.63-3.068-1.593a3.745 3.745 0 0 1-3.296-1.043 3.746 3.746 0 0 1-1.043-3.297 3.746 3.746 0 0 1-1.593-3.068c0-1.268.63-2.39 1.593-3.068a3.746 3.746 0 0 1 1.043-3.297 3.745 3.745 0 0 1 3.296-1.042 3.745 3.745 0 0 1 3.068-1.594c1.268 0 2.39.63 3.068 1.593a3.745 3.745 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.297 3.746 3.746 0 0 1 1.593 3.068ZM9.74 9.743h.008v.007H9.74v-.007Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm4.125 4.5h.008v.008h-.008v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z"/>
                    </svg>
                    <input id="new_percentage" name="percentage"
                           placeholder="Например: 10"
                           required class="w-full outline-none"/>
                </label>

                <div class="text-sm text-gray-500 mb-2" id="passwordHint">
                    Введите процент без знака «%». Только число.
                </div>

                <div id="txtModal" class="text-sm text-gray-700 space-y-3">
                    <div class="grid grid-cols-2 gap-x-4 gap-y-4">

                        <div class="text-gray-500 font-semibold">Дата транзакции:</div>
                        <div class="font-serif text-gray-800" id="modal-date">—</div>

                        <div class="text-gray-500 font-semibold">Сумма:</div>
                        <div class="font-serif text-gray-800" id="modal-balance">—</div>

                        <div class="text-gray-500 font-semibold">Старый процент:</div>
                        <div class="font-serif text-gray-800" id="modal-percent">—</div>

                        <div class="text-gray-500 font-semibold">Старый доход:</div>
                        <div class="font-serif text-gray-800" id="modal-income">—</div>

                        <div class="text-gray-500 font-semibold">Старый итоговый сумма:</div>
                        <div class="font-serif text-gray-800" id="modal-final-amount">—</div>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-6">
                    <button type="button" id="confirmChanges" class="btn btn-primary">Сохранить</button>
                    <button type="button" onclick="closeModal()" class="btn btn-secondary">Отмена</button>
                </div>
            </form>
        </div>
    </dialog>



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>

    <!-- Инициализация -->
    <script>
        function showCornerModal(message) {
            const checkbox = document.getElementById('cornerModal');
            const txtModal = document.getElementById('txtModal');
            checkbox.checked = true;
            txtModal.innerHTML = message;

            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }

        const pickerFrom = new Pikaday({
            field: document.getElementById('datepicker_from'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });

        const pickerTo = new Pikaday({
            field: document.getElementById('datepicker_to'),
            format: 'DD.MM.YYYY', // Русский формат даты
            firstDay: 1,
            i18n: {
                previousMonth: 'Предыдущий',
                nextMonth: 'Следующий',
                months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
            },
            toString(date, format) {
                // форматирует в dd.mm.yyyy
                const day = String(date.getDate()).padStart(2, '0');
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const year = date.getFullYear();
                return `${day}.${month}.${year}`;
            },
            parse(dateString, format) {
                const parts = dateString.split('.');
                const day = parseInt(parts[0], 10);
                const month = parseInt(parts[1], 10) - 1;
                const year = parseInt(parts[2], 10);
                return new Date(year, month, day);
            }
        });


        // Обработчик кнопки "Формировать"
        document.getElementById('searchFilters').addEventListener('click', () => {
            const supplerId = document.querySelector('input[name="suppler_id"]').value;
            const category = document.getElementById('category')?.textContent.trim();
            const dateFrom = document.getElementById('datepicker_from').value;
            const dateTo = document.getElementById('datepicker_to').value;

            if (!supplerId) {
                showCornerModal('Выберите поставщика!');
                return;
            }

            if (!dateFrom && dateTo) {
                showCornerModal('Выберите начало даты!');
                return;
            }

            const params = new URLSearchParams();
            params.append('supplier_id', supplerId);
            if (category) params.append('category', category);
            if (dateFrom) params.append('date_from', dateFrom);
            if (dateTo) params.append('date_to', dateTo);

            window.location.href = `/transaction/supplierReports?${params.toString()}`;
        });


        /////////////////////////////////////////////////////////////////

        const input = document.getElementById('new_percentage');
        const error = document.getElementById('percentError');
        const saveBtn = document.getElementById('confirmChanges');

        const isValid = value => {
            value = String(value).trim();
            if (value.endsWith('.')) {
                value += '0';  // чтобы "15." считалось "15.0"
            }
            if (!/^\d+(\.\d{0,2})?$/.test(value)) return false;

            const num = Number(value);
            return num >= 0 && num <= 100;
        };


        const updateUI = () => {
            const ok = isValid(input.value);
            saveBtn.disabled = !ok;
            saveBtn.classList.toggle('opacity-40', !ok);
            saveBtn.classList.toggle('cursor-not-allowed', !ok);
        };

        input.addEventListener('input', () => {
            let val = input.value;
            val = val.replace(/[^0-9.]/g, '');

            const parts = val.split('.');
            if (parts.length > 2) {
                val = parts[0] + '.' + parts.slice(1).join('');
            }


            if (!val.startsWith('0.') && val.length > 1) {
                val = val.replace(/^0+/, '');
                if (val === '') val = '0';
            }

            if (Number(val) > 100) val = '100';

            input.value = val;
            updateUI();
        });


        function closeModal() {
            const modal = document.getElementById('percentModal');
            if (modal) modal.close();

            // Очистка процента, если надо
            const percentageInput = document.getElementById('new_percentage');
            if (percentageInput) percentageInput.value = '';
        }

        function openPercentModal(transactionId, legalId, date, balance, percent, income, amount) {
            const modal = document.getElementById('percentModal');
            const confirmBtn = document.getElementById('confirmChanges');

            if (modal && confirmBtn) {
                confirmBtn.dataset.transactionId = transactionId;
                confirmBtn.dataset.legalId = legalId;
                modal.showModal();
            }

            updateUI();
            document.getElementById('modal-date').textContent = date || '—';
            document.getElementById('modal-balance').textContent = balance || '—';
            document.getElementById('modal-percent').textContent = percent || '—';
            document.getElementById('modal-income').textContent = income || '—';
            document.getElementById('modal-final-amount').textContent = amount || '—';
        }

        function closePercentModal() {
            const modal = document.getElementById('percentModal');
            if (modal) {
                modal.close();
            }
        }

        document.getElementById('confirmChanges').addEventListener('click', async () => {
            const input = document.getElementById('new_percentage');
            const confirmBtn = document.getElementById('confirmChanges');
            const modal = document.getElementById('percentModal');

            const percentage = input.value.trim();
            const transactionId = confirmBtn.dataset.transactionId;
            const legalId = confirmBtn.dataset.legalId;

            if (!percentage || percentage < 0 || percentage > 100) {
                input.value = '';
                modal.close();
                showCornerModal('Ошибка процента укажите правильное число')
                return;
            }


            const result = await postData('/transaction/changePercentage', {
                transaction_id: transactionId,
                legal_id: legalId,
                percent: percentage,
            });

            if (result === 'error' || result.status === 'error') {
                input.value = '';
                showCornerModal('Не удалось установить процент!')
                return;
            }

            localStorage.setItem(
                'showCornerModal',
                'Удачно установили новый процентный'
            );

            input.value = '';
            location.reload();
            modal.close();
        });

        window.addEventListener('load', () => {
            const message = localStorage.getItem('showCornerModal');

            if (message) {
                showCornerModal(message);
                localStorage.removeItem('showCornerModal');
            }
        });


        document.querySelectorAll('.change-percentage').forEach(element => {
            element.addEventListener('click', () => {
                const transactionId = element.getAttribute('data-transaction-id');
                const legalId = element.getAttribute('data-legal-id');


                const date = element.getAttribute('data-transaction-date');
                const percent = element.getAttribute('data-transaction-percent');
                const amount = element.getAttribute('data-transaction-amount');
                const interest_income = element.getAttribute('data-transaction-interest_income');
                const total_amount = element.getAttribute('data-transaction-total_amount');


                openPercentModal(transactionId, legalId, date, amount, percent, interest_income, total_amount)
            });
        });

    </script>




{% endblock %}
