{% block content %}

    <!-- Кнопка скачать -->
    <div>
        <button
                id="receipt-button"
                onclick="downloadTableUniversal()"
                class="relative flex items-center justify-center gap-1
                           px-2 py-1 text-xs
                           sm:gap-2 sm:px-4 sm:py-2 sm:text-sm
                           bg-blue-600 hover:bg-blue-700 text-white font-medium
                           rounded-md sm:rounded-lg
                           shadow-sm transition">

            <!-- Иконка -->
            <svg xmlns="http://www.w3.org/2000/svg"
                 class="h-3 w-3 sm:h-4 sm:w-4"
                 fill="none" viewBox="0 0 24 24"
                 stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round"
                      d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
            </svg>

            <!-- Текст -->
            <span class="button-text leading-none">
                        Образовать таблицу
                    </span>

            <!-- Лоадер -->
            <span id="loader"
                  class="absolute top-1/2 left-1/2
                                     -translate-x-1/2 -translate-y-1/2
                                     opacity-0 pointer-events-none">
                            <span class="loading loading-dots loading-sm sm:loading-lg"></span>
                                    </span>
        </button>
    </div>


{% endblock %}
