{% extends './Navbar/Navbar.twig' %}

{% block content %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
        <!-- Верхняя часть: имя, почта, действия -->
        <div class="space-y-4">
            <!-- Имя  -->
            <div class="flex items-center justify-between">
                <div class="text-x font-semibold text-gray-800">{{ entities.company_name }}</div>
            </div>

            <div class="flex items-center gap-2 text-gray-700">

                {% if entities.user_role == 'client' %}
                    <span class="text-sm">Клиент:</span>
                {% elseif entities.user_role == 'supplier' %}
                    <span class="text-sm">Поставщик:</span>
                {% endif %}
                <p class="text-sm" id="bank-account">{{ entities.user_name }}</p>
            </div>

            <div class="flex items-center gap-2 text-gray-700">
                <span class="text-sm">Счет:</span>
                <p class="text-sm" id="bank-account">{{ entities.bank_account }}</p>

                <!-- Кнопка копирования -->
                <button type="button"
                        class="ml-2 w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900"
                        onclick="copyText('{{ entities.bank_account }}')">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"></path>
                    </svg>
                </button>
            </div>
            <div class="flex items-center gap-2 text-gray-700">
                <span class="text-sm">ИНН:</span>
                <p class="text-sm" id="inn">{{ entities.inn }}</p>

                <!-- Кнопка копирования -->
                <button type="button"
                        class="ml-2 w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900"
                        onclick="copyText('{{ entities.inn }}')">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"></path>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Баланс и долг (выравнивание по горизонтали) -->
        <div class="w-full max-w-8xl mx-auto space-y-4">

            <!-- Баланс и долг -->
            <div class="flex justify-between items-center p-4 bg-white rounded-xl shadow-sm text-sm text-gray-700 uppercase border border-gray-200">
                <div class="flex flex-col gap-1">
                    <div class="text-gray-500">Процент</div>
                    <div class="flex items-center gap-2">
                        <div class="text-blue-600 font-semibold text-base">{{ entities.percent }}%</div>
                    </div>
                </div>
                <div class="flex flex-col items-end gap-1 text-right">
                    <div class="text-gray-500">
                        {{ entities.balance >= 0 ? 'Общий баланс' : 'Долг' }}
                    </div>
                    <div class="{{ entities.balance < 0 ? 'text-red-600' : 'text-green-600' }} font-semibold text-base">
                        {{ entities.balance }}
                    </div>
                </div>
            </div>

            {% if transactions is empty %}
                <div role="alert" class="alert alert-warning mt-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none"
                         viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <span>Нет транзакций</span>
                </div>
            {% else %}
                <!-- Контейнер для выбора дат -->
                <div class="flex flex-wrap md:flex-nowrap items-center gap-4 w-full">
                    <!-- Дата "от" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-sm font-medium text-gray-600">ОТ-</span>
                        <input type="text"
                               id="datepicker_from"
                               placeholder="Дата начала"
                               autocomplete="off"
                               class="w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>

                    <!-- Дата "до" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-sm font-medium text-gray-600">ДО-</span>
                        <input type="text"
                               id="datepicker_to"
                               placeholder="Дата окончания"
                               autocomplete="off"
                               class="w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>
                    <!-- Кнопка "Искать" -->
                    <div class="w-full md:w-auto">
                        <button id="searchFilters" type="submit"
                                class="w-full md:w-auto h-[56px] px-6 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-xl shadow-sm transition">
                            Поиск с фильтрам
                        </button>
                    </div>
                </div>
                <!-- Таблица -->
                <div class="overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                    <table class="table w-full text-sm text-left divide-x divide-gray-200">
                        <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2 w-8">ID</th>
                            <th class="px-3 py-2 w-15">Тип перевода</th>
                            <th class="px-3 py-2 w-28">Дата</th>
                            <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Описание</th>
                            <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Получатель:Название компании</th>
                            <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Получатель</th>
                            <th class="px-3 py-2 w-16">Процент</th>
                            <th class="px-3 py-2 w-20">Общая сумма</th>
                            <th class="px-3 py-2 w-20">Комиссия</th>
                            <th class="px-3 py-2 w-24">Итоговая сумма</th>
                        </tr>
                        </thead>
                        <tbody class="text-sm divide-y divide-gray-100">
                        {% for transaction in transactions %}
                            <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                                <td class="px-3 py-2">{{ transaction.id }}</td>
                                {% if transaction.type == 'expense' %}
                                    <td class="px-3 py-2">Расходы</td>
                                {% elseif transaction.type == 'return' %}
                                    <td class="px-3 py-2">Возврат</td>
                                {% elseif transaction.type == 'income' %}
                                    <td class="px-3 py-2">Доход</td>
                                {% endif %}
                                <td class="px-3 py-2">{{ transaction.date }}</td>
                                <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.description }}</td>
                                <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.company_name }}</td>
                                <td class="px-3 py-2 text-xs text-gray-700">{{ transaction.bank_name_recipient }}</td>
                                <td class="px-3 py-2">
                                    {% if transaction.percent == 0 %}
                                        {{ transaction.percent }}%
                                    {% else %}
                                        <span
                                                data-transaction-id="{{ transaction.id }}"
                                                data-legal-id="{{ transaction.legal_id }}"
                                                data-transaction-date="{{ transaction.date }}"
                                                data-transaction-company_name="{{ transaction.company_name }}"
                                                data-transaction-bank_name_recipient="{{ transaction.bank_name_recipient }}"
                                                data-transaction-percent="{{ transaction.percent }}"
                                                data-transaction-amount="{{ transaction.amount }}"
                                                data-transaction-interest_income="{{ transaction.interest_income }}"
                                                data-transaction-total_amount="{{ transaction.total_amount }}"
                                                class="change-percentage cursor-pointer text-blue-600 hover:underline font-medium">
                                        {{ transaction.percent }}%
                                    </span>
                                    {% endif %}
                                </td>
                                <td class="px-3 py-2">{{ transaction.amount }}</td>
                                <td class="px-3 py-2">{{ transaction.interest_income ?? '' }}</td> <!-- Комиссия -->
                                <td class="px-3 py-2">{{ transaction.total_amount ?? '' }}</td> <!-- Итоговая сумма -->
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2">ID</th>
                            <th class="px-3 py-2">Тип перевода</th>
                            <th class="px-3 py-2">Дата</th>
                            <th class="px-3 py-2">Описание</th>
                            <th class="px-3 py-2">Получатель:Название компании</th>
                            <th class="px-3 py-2 min-w-[250px] max-w-[500px]">Получатель</th>
                            <th class="px-3 py-2">Процент</th>
                            <th class="px-3 py-2">Общая сумма</th>
                            <th class="px-3 py-2">Комиссия</th>
                            <th class="px-3 py-2">Итоговая сумма</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>


    <dialog id="percentModal" class="modal">
        <div class="modal-box">
            <form id="upload_form" class="flex flex-col">
                <h3 id="modal-title" class="text-lg font-semibold text-center mb-4">Установить новый процент</h3>

                <label id="percentage-label"
                       class="input w-full mb-4 flex items-center gap-2 border rounded-md p-3">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m8.99 14.993 6-6m6 3.001c0 1.268-.63 2.39-1.593 3.069a3.746 3.746 0 0 1-1.043 3.296 3.745 3.745 0 0 1-3.296 1.043 3.745 3.745 0 0 1-3.068 1.593c-1.268 0-2.39-.63-3.068-1.593a3.745 3.745 0 0 1-3.296-1.043 3.746 3.746 0 0 1-1.043-3.297 3.746 3.746 0 0 1-1.593-3.068c0-1.268.63-2.39 1.593-3.068a3.746 3.746 0 0 1 1.043-3.297 3.745 3.745 0 0 1 3.296-1.042 3.745 3.745 0 0 1 3.068-1.594c1.268 0 2.39.63 3.068 1.593a3.745 3.745 0 0 1 3.296 1.043 3.746 3.746 0 0 1 1.043 3.297 3.746 3.746 0 0 1 1.593 3.068ZM9.74 9.743h.008v.007H9.74v-.007Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm4.125 4.5h.008v.008h-.008v-.008Zm.375 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
                    </svg>
                    <input id="new_percentage" name="percentage"
                           placeholder="Например: 10"
                           required class="w-full outline-none"/>
                </label>

                <div class="text-sm text-gray-500 mb-2" id="passwordHint">
                    Введите процент без знака «%». Только число.
                </div>

                <div id="txtModal" class="text-sm text-gray-700 space-y-3">
                    <div class="grid grid-cols-2 gap-x-4 gap-y-4">

                        <div class="text-gray-500 font-semibold">Дата транзакции:</div>
                        <div class="font-serif text-gray-800" id="modal-date">—</div>

                        <div class="text-gray-500 font-semibold">Сумма:</div>
                        <div class="font-serif text-gray-800" id="modal-balance">—</div>

                        <div class="text-gray-500 font-semibold">Старый процент:</div>
                        <div class="font-serif text-gray-800" id="modal-percent">—</div>

                        <div class="text-gray-500 font-semibold">Старый доход:</div>
                        <div class="font-serif text-gray-800" id="modal-income">—</div>

                        <div class="text-gray-500 font-semibold">Старый итоговый сумма:</div>
                        <div class="font-serif text-gray-800" id="modal-final-amount">—</div>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-6">
                    <button type="button" id="confirmChanges" class="btn btn-primary">Сохранить</button>
                    <button type="button" onclick="closeModal()" class="btn btn-secondary">Отмена</button>
                </div>
            </form>
        </div>
    </dialog>

    <!-- Триггер через checkbox -->
    <input type="checkbox" id="notifications" class="hidden peer"/>
    <div class="fixed bottom-4 right-4 z-50 max-w-sm w-full
            hidden peer-checked:flex flex-col bg-white border border-gray-300 rounded-xl shadow-xl
            animate-fade-in transition-opacity duration-300 ease-out
            px-5 py-4 space-y-2">

        <div class="flex items-start justify-between">
            <div class="flex items-start space-x-2">
                <svg class="w-6 h-6 text-blue-500 mt-1 shrink-0" fill="none" stroke="currentColor" stroke-width="1.5"
                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022 23.85 23.85 0 0 0 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0 3 3 0 1 0 5.714 0ZM3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5"/>
                </svg>

                <div>
                    <h3 class="text-base font-semibold text-gray-900">Уведомление</h3>
                    <p id="notifications-txt" class="text-sm text-gray-600 leading-snug mt-1">...</p>
                </div>
