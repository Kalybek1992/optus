{% extends './Navbar/Navbar.twig' %}

{% block content %}

    <div class="max-w-8xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
        <!-- Если список пуст -->
        {% if our_accounts is empty %}
            <div role="alert" class="alert alert-warning mt-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <span>Наши компании не добавлены</span>
            </div>
        {% else %}

            <!-- Заголовок -->
            <div class="text-center text-sm font-semibold text-gray-700">
                Сводка наших компаний по загрузке в выписке
                <div class="mx-auto w-1/2 border-t border-gray-300 mt-7 mb-7"></div>
            </div>

            {% set total_final_remainder = 0 %}

            <!-- Кнопка скачать -->
            <div>
                <button
                        id="receipt-button"
                        onclick="downloadTableUniversal()"
                        class="relative flex items-center justify-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg shadow-sm transition">

                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round"
                              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                    </svg>
                    <span class="button-text">Образовать таблицу</span>
                    <!-- Лоадер скрыт изначально -->
                    <span id="loader" class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 opacity-0 pointer-events-none">
                        <span class="loading loading-dots loading-lg"></span>
                    </span>
                </button>
            </div>

            <!-- Desktop таблица -->
            <div class="hidden md:block overflow-x-auto w-full border border-gray-200 rounded-lg shadow-sm">
                <table class="table w-full text-sm text-left divide-x divide-gray-200">
                    <thead class="bg-gray-100 text-xs text-gray-500 uppercase">
                    <tr class="divide-x divide-gray-200">
                        <th class="px-3 py-2">Название компании</th>
                        <th class="px-3 py-2">Название банка</th>
                        <th class="px-3 py-2">Конечный остаток</th>
                        <th class="px-3 py-2">Дата остатка</th>
                        <th class="px-3 py-2">Количество транзакций</th>
                        <th class="px-3 py-2">Количество новых аккаунтов</th>
                        <th class="px-3 py-2">Количество обновленных аккаунтов</th>
                        <th class="px-3 py-2">Скачать выписку</th>
                        <th class="px-3 py-2">Загрузка</th>
                    </tr>
                    </thead>
                    <tbody class="text-sm divide-y divide-gray-100">
                    {% for account in our_accounts %}
                        {% set total_final_remainder = total_final_remainder + account.final_remainder %}
                            <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                                <td class="px-3 py-2 bg-green-100 font-bold italic text-gray-700">{{ account.company_name }}</td>
                                <td class="px-3 py-2 bg-yellow-100 font-bold italic text-gray-700">{{ account.bank_name }}</td>
                                <td class="px-3 py-2 bg-purple-100 font-bold italic text-gray-700">{{ account.final_remainder|number_format(0, ',', ' ') }} ₽</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">{{ account.date_created|default('-') }}</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">{{ account.transactions_count }}</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">{{ account.new_accounts_count }}</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">{{ account.bank_accounts_updated }}</td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">
                                    {% if account.file_name is not empty %}
                                        <button
                                                type="button"
                                                class="flex items-center gap-1 text-blue-600 hover:text-blue-800 download-file-btn"
                                                data-file="{{ account.file_name }}"
                                        >
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                                 viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                                            </svg>
                                            Скачать выписку
                                        </button>
                                    {% else %}
                                        —
                                    {% endif %}
                                </td>
                                <td class="px-3 py-2 font-bold italic text-gray-700">
                                    {% if account.is_expired %}
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-red-500">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                  d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374
                                                 1.948 3.374h14.71c1.73 0 2.813-1.874
                                                 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898
                                                 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z"/>
                                        </svg>
                                    {% else %}
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 text-green-500">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                  d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"/>
                                        </svg>
                                    {% endif %}
                                </td>
                            </tr>
                    {% endfor %}
                    <!-- Сумма -->
                        <tr class="hover:bg-gray-50 divide-x divide-gray-200">
                            <td class="px-3 py-2 font-bold italic text-gray-700">Сумма конечного остатка</td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2 font-bold italic text-gray-700"> {{ total_final_remainder|number_format(0, ',', ' ') }} ₽</td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2"></td>
                            <td class="px-3 py-2"></td>
                        </tr>
                    </tbody>
                    <tfoot class="bg-gray-100 text-xs text-gray-500 uppercase">
                        <tr class="divide-x divide-gray-200">
                            <th class="px-3 py-2">Название компании</th>
                            <th class="px-3 py-2">Название банка</th>
                            <th class="px-3 py-2">Конечный остаток</th>
                            <th class="px-3 py-2">Дата остатка</th>
                            <th class="px-3 py-2">Количество транзакций</th>
                            <th class="px-3 py-2">Количество новых аккаунтов</th>
                            <th class="px-3 py-2">Количество обновленных аккаунтов</th>
                            <th class="px-3 py-2">Скачать выписку</th>
                            <th class="px-3 py-2">Загрузка</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Mobile карточки -->
            <div class="md:hidden space-y-4">
                {% for account in our_accounts %}
                    <div class="border border-gray-200 rounded-lg shadow-sm p-4 space-y-2 text-xs">

                        <div class="font-semibold">
                            <span class="font-bold text-green-700">Компания:</span>
                            {{ account.company_name }}
                        </div>

                        <div class="font-semibold">
                            <span class="font-bold text-yellow-700">Банк:</span>
                            {{ account.bank_name }}
                        </div>

                        <div class="font-semibold">
                            <span class="font-bold text-purple-700">Конечный остаток:</span>
                            {{ account.final_remainder|number_format(0, ',', ' ') }} ₽
                        </div>

                        <div class="font-semibold">
                            <span class="font-bold">Дата остатка:</span>
                            {{ account.date_created|default('-') }}
                        </div>

                        <div class="grid grid-cols-2 gap-x-2 gap-y-1 pt-1">
                            <div>
                                <span class="font-bold">Транзакции:</span>
                                {{ account.transactions_count }}
                            </div>
                            <div>
                                <span class="font-bold">Новые аккаунты:</span>
                                {{ account.new_accounts_count }}
                            </div>
                            <div>
                                <span class="font-bold">Обновленные:</span>
                                {{ account.bank_accounts_updated }}
                            </div>
                        </div>

                        <!-- Скачать -->
                        <div class="pt-2">
                            {% if account.file_name is not empty %}
                                <button
                                        type="button"
                                        class="flex items-center gap-1 text-blue-600 hover:text-blue-800 download-file-btn"
                                        data-file="{{ account.file_name }}"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none"
                                         viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round"
                                              d="M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4"/>
                                    </svg>
                                    Скачать выписку
                                </button>
                            {% else %}
                                <span class="text-gray-400 italic">Выписка отсутствует</span>
                            {% endif %}
                        </div>

                        <!-- Статус -->
                        <div class="pt-1 font-semibold">
                            <span class="font-bold">Статус:</span>
                            {% if account.is_expired %}
                                <span class="text-red-500">Просрочено</span>
                            {% else %}
                                <span class="text-green-500">Загружено</span>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% endif %}
    </div>

    {% include './Unloading/Unloading.twig' %}

    <script>
        document.addEventListener('click', function (e) {
            const btn = e.target.closest('.download-file-btn');
            if (!btn) return;

            const file = btn.dataset.file;
            if (!file) return;

            const link = document.createElement('a');
            link.href = '/unloading/downloadExtract?file=' + encodeURIComponent(file);
            link.download = ''; // имя отдаст сервер
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        });
    </script>

{% endblock %}
