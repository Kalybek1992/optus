{% block content %}

    <div class="max-w-8xl mx-auto space-y-10 mb-[100px]">
        {% if task_planner is not empty %}
            <!-- Десктопная версия -->
            <div class="hidden lg:block bg-white rounded-2xl shadow-lg p-6 relative">
                <div class="text-center text-sm font-semibold text-gray-700 mb-6">
                    Планы оплат на 4 дня вперед!
                    <div class="mx-auto w-1/2 border-t border-gray-300 mt-4 mb-4"></div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full text-xs sm:text-sm text-left border-t border-gray-200 table-auto">
                        <thead class="bg-gray-50 text-gray-700">
                        <tr class="border-b">
                            <th class="py-2 px-2 sm:px-4 font-medium">Дата</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Название плана</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Комментарий</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Тип повторения</th>
                            <th class="py-2 px-2 sm:px-4 font-medium">Компания</th>
                            <th class="py-2 px-2 sm:px-4 font-medium text-right text-blue-700">Сумма</th>
                            <th class="py-2 px-2 sm:px-4 font-medium text-right text-amber-600">Оплачено</th>
                            <th class="py-2 px-2 sm:px-4 font-medium text-center text-gray-700">Действия</th>
                        </tr>
                        </thead>
                        <tbody class="text-gray-700">
                        {% for item in task_planner %}
                            <tr class="hover:bg-gray-50 transition align-top flex flex-col sm:table-row mb-2 sm:mb-0">
                                <td class="py-2 px-2 sm:px-4">{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}</td>
                                <td class="py-2 px-2 sm:px-4 font-semibold text-gray-800">{{ item.plan_name }}</td>
                                <td class="py-2 px-2 sm:px-4">{{ item.comment }}</td>
                                <td class="py-2 px-2 sm:px-4 text-center">
                                    {% if item.repeat_type == 'none' %}Не повторяется
                                    {% elseif item.repeat_type == 'weekly' %}Каждую неделю
                                    {% elseif item.repeat_type == 'monthly' %}Каждый месяц
                                    {% endif %}
                                </td>
                                <td class="py-2 px-2 sm:px-4">{{ item.company_name|default('—') }}</td>
                                <td class="py-2 px-2 sm:px-4 font-semibold text-blue-700 text-right">{{ item.amount|number_format(0, ',', ' ') }} ₽</td>
                                <td class="py-2 px-2 sm:px-4 font-semibold text-amber-600 text-right">{{ item.paid|default(0)|number_format(0, ',', ' ') }} ₽</td>
                                <td class="py-2 px-2 sm:px-4 text-center">
                                    <div class="flex justify-center gap-1 flex-wrap">
                                        <!-- Оплатить -->
                                        <button
                                                class="paid-btn border border-blue-600 text-blue-600 p-[10px] rounded-lg hover:bg-blue-600 hover:text-white transition"
                                                data-id="{{ item.id }}"
                                                data-plan-name="{{ item.plan_name }}"
                                                data-amount="{{ item.amount }}"
                                                data-paid="{{ item.paid }}"
                                                data-repeat-type="{{ item.repeat_type }}"
                                                data-company-name="{{ item.company_name|default('—') }}"
                                                data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                                data-comment="{{ item.comment }}"
                                                data-paid-at="{{ item.paid >= item.amount and item.repeat_type == 'none' ? '1' : '0' }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                 stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z"/>
                                            </svg>
                                        </button>


                                        <!-- Редактировать -->
                                        <button
                                                class="edit-btn border border-orange-500 text-orange-500 p-[10px] rounded-lg hover:bg-orange-500 hover:text-white transition"
                                                data-id="{{ item.id }}"
                                                data-plan-name="{{ item.plan_name }}"
                                                data-amount="{{ item.amount }}"
                                                data-paid="{{ item.paid }}"
                                                data-repeat-type="{{ item.repeat_type }}"
                                                data-company-name="{{ item.company_name|default('—') }}"
                                                data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                                data-comment="{{ item.comment }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                 stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
                                            </svg>
                                        </button>

                                        <!-- Удалить -->
                                        <button
                                                class="delete-btn border border-red-600 text-red-600 p-[10px] rounded-lg hover:bg-red-600 hover:text-white transition"
                                                data-id="{{ item.id }}"
                                                data-plan-name="{{ item.plan_name }}"
                                                data-amount="{{ item.amount }}"
                                                data-repeat-type="{{ item.repeat_type }}"
                                                data-company-name="{{ item.company_name|default('—') }}"
                                                data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                                data-comment="{{ item.comment }}">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                 stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                                            </svg>
                                        </button>

                                        <!-- Статус цветом -->
                                        <div class="p-[10px] rounded-lg border border-gray-100 flex items-center justify-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                                 stroke-width="1.5"
                                                 stroke="{% if item.status_color == 'red' %}#DC143C{% elseif item.status_color == 'yellow' %}#FFA500{% elseif item.status_color == 'green' %}#32CD32{% else %}gray{% endif %}"
                                                 class="size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                      d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z"/>
                                            </svg>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Мобильная версия -->
            <div class="lg:hidden space-y-4 mt-4">
                {% for item in task_planner %}
                    <div class="border border-gray-200 rounded-lg p-3 shadow-sm bg-white text-[13px] space-y-2">
                        <div><span class="text-gray-500 text-xs">Дата:</span> <span class="font-medium">{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}</span></div>
                        <div><span class="text-gray-500 text-xs">Название плана:</span> <span class="font-medium">{{ item.plan_name }}</span></div>
                        <div><span class="text-gray-500 text-xs">Комментарий:</span> <span class="text-xs text-gray-700 break-all">{{ item.comment }}</span></div>
                        <div><span class="text-gray-500 text-xs">Тип повторения:</span>
                            <span class="font-medium">
                            {% if item.repeat_type == 'none' %}Не повторяется
                            {% elseif item.repeat_type == 'weekly' %}Каждую неделю
                            {% elseif item.repeat_type == 'monthly' %}Каждый месяц
                            {% endif %}
                        </span>
                        </div>
                        <div><span class="text-gray-500 text-xs">Компания:</span> <span class="text-xs text-gray-700 break-all">{{ item.company_name|default('—') }}</span></div>
                        <div><span class="text-gray-500 text-xs">Сумма:</span> <span class="font-semibold text-blue-700">{{ item.amount|number_format(0, ',', ' ') }}</span></div>
                        <div><span class="text-gray-500 text-xs">Оплачено:</span> <span class="font-semibold text-amber-600">{{ item.paid|default(0)|number_format(0, ',', ' ') }}</span></div>
                        <div class="flex justify-start gap-2 flex-wrap">
                            <!-- Оплатить -->
                            <button
                                    class="paid-btn border border-blue-600 text-blue-600 p-[10px] rounded-lg hover:bg-blue-600 hover:text-white transition"
                                    data-id="{{ item.id }}"
                                    data-plan-name="{{ item.plan_name }}"
                                    data-amount="{{ item.amount }}"
                                    data-paid="{{ item.paid }}"
                                    data-repeat-type="{{ item.repeat_type }}"
                                    data-company-name="{{ item.company_name|default('—') }}"
                                    data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                    data-comment="{{ item.comment }}"
                                    data-paid-at="{{ item.paid >= item.amount and item.repeat_type == 'none' ? '1' : '0' }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M2.25 18.75a60.07 60.07 0 0 1 15.797 2.101c.727.198 1.453-.342 1.453-1.096V18.75M3.75 4.5v.75A.75.75 0 0 1 3 6h-.75m0 0v-.375c0-.621.504-1.125 1.125-1.125H20.25M2.25 6v9m18-10.5v.75c0 .414.336.75.75.75h.75m-1.5-1.5h.375c.621 0 1.125.504 1.125 1.125v9.75c0 .621-.504 1.125-1.125 1.125h-.375m1.5-1.5H21a.75.75 0 0 0-.75.75v.75m0 0H3.75m0 0h-.375a1.125 1.125 0 0 1-1.125-1.125V15m1.5 1.5v-.75A.75.75 0 0 0 3 15h-.75M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Zm3 0h.008v.008H18V10.5Zm-12 0h.008v.008H6V10.5Z"/>
                                </svg>
                            </button>


                            <!-- Редактировать -->
                            <button
                                    class="edit-btn border border-orange-500 text-orange-500 p-[10px] rounded-lg hover:bg-orange-500 hover:text-white transition"
                                    data-id="{{ item.id }}"
                                    data-plan-name="{{ item.plan_name }}"
                                    data-amount="{{ item.amount }}"
                                    data-paid="{{ item.paid }}"
                                    data-repeat-type="{{ item.repeat_type }}"
                                    data-company-name="{{ item.company_name|default('—') }}"
                                    data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                    data-comment="{{ item.comment }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10"/>
                                </svg>
                            </button>

                            <!-- Удалить -->
                            <button
                                    class="delete-btn border border-red-600 text-red-600 p-[10px] rounded-lg hover:bg-red-600 hover:text-white transition"
                                    data-id="{{ item.id }}"
                                    data-plan-name="{{ item.plan_name }}"
                                    data-amount="{{ item.amount }}"
                                    data-repeat-type="{{ item.repeat_type }}"
                                    data-company-name="{{ item.company_name|default('—') }}"
                                    data-date="{{ '%02d.%02d'|format(item.day, item.month) }} {{ item.weekday }}"
                                    data-comment="{{ item.comment }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0"/>
                                </svg>
                            </button>

                            <!-- Статус цветом -->
                            <div class="p-[10px] rounded-lg border border-gray-100 flex items-center justify-center">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5"
                                     stroke="{% if item.status_color == 'red' %}#DC143C{% elseif item.status_color == 'yellow' %}#FFA500{% elseif item.status_color == 'green' %}#32CD32{% else %}gray{% endif %}"
                                     class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

{% endblock %}
