{% extends './Navbar/Navbar.twig' %}
{% block content %}
    {% include './Breadcrumb/GetShop.twig' %}
    {% for client in clients %}
        <!-- Карточка клиента -->
        <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-6 space-y-4 relative mt-4">
            <!-- Верхняя часть: имя, почта, действия -->
            <div class="space-y-4">
                <!-- Имя + кнопки справа -->
                <div class="flex items-center justify-between">
                    <div class="text-xl font-semibold text-gray-800">{{ client.name }}</div>
                    <div class="flex space-x-2">
                        <label
                                for="delete_account"
                                class="text-gray-500 hover:text-red-600 cursor-pointer"
                                title="Удалить"
                                role="button"
                                tabindex="0"
                                data-name="{{ client.name }}"
                                data-entity-user_id="{{ client.user_id }}">
                            <span class="text-xl"><i class="fa-solid fa-trash"></i></span>
                        </label>
                    </div>
                </div>

                <!-- Почта -->
                <div class="flex items-center gap-2 text-sm">
                    <span class="font-semibold text-black">Почта:</span>
                    <p class="font-semibold text-gray-600 italic" id="email">{{ client.email }}</p>

                    <!-- Кнопка копирования -->
                    <button type="button"
                            class="ml-2 w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900"
                            onclick="copyText('{{ client.email }}')">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"/>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"/>
                        </svg>
                    </button>

                    <!-- Редактировать -->
                    <label for="change_email"
                           data-entity-user_id="{{ client.user_id }}"
                           data-entity_email="{{ client.email }}"
                           class="w-8 h-8 flex items-center justify-center cursor-pointer text-gray-600 hover:text-gray-900"
                           title="Редактировать">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M11 5h2M12 4v2M4 20h16M16.5 3.5a2.121 2.121 0 113 3L12 14l-4 1 1-4 7.5-7.5z"/>
                        </svg>
                    </label>
                </div>

                <!-- Пароль -->
                <div class="flex items-center gap-2 text-sm">
                    <span class="font-semibold text-black">Пароль:</span>
                    <span id="password" class="font-semibold text-gray-600 italic">{{ client.password }}</span>

                    <!-- Копировать -->
                    <button type="button"
                            class="ml-2 text-gray-600 hover:text-gray-900"
                            onclick="copyText('{{ client.password }}')">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"/>
                            <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"/>
                        </svg>
                    </button>

                    <!-- Редактировать -->
                    <label for="change_password"
                           data-entity-user_id="{{ client.user_id }}"
                           data-entity_password="{{ client.password }}"
                           class="w-8 h-8 flex items-center justify-center cursor-pointer text-gray-600 hover:text-gray-900"
                           title="Редактировать">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M11 5h2M12 4v2M4 20h16M16.5 3.5a2.121 2.121 0 113 3L12 14l-4 1 1-4 7.5-7.5z"/>
                        </svg>
                    </label>
                </div>

                <!-- Выбор фильтра дата -->
                <div class="flex flex-col md:flex-row md:items-center gap-4">
                    <!-- Дата "от" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-sm font-medium text-gray-600">ОТ-</span>
                        <input type="text"
                               placeholder="Дата начала"
                               autocomplete="off"
                               class="datepicker_from w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>

                    <!-- Дата "до" -->
                    <div class="flex items-center w-full md:w-auto gap-2">
                        <span class="text-sm font-medium text-gray-600">ДО-</span>
                        <input type="text"
                               placeholder="Дата окончания"
                               autocomplete="off"
                               class="datepicker_to w-full md:w-[12rem] h-[56px] p-4 bg-white rounded-xl shadow-sm text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>

                    <!-- Кнопка поиска -->
                    <div class="w-full md:w-auto">
                        <button
                                type="button"
                                data-entity-client_id="{{ client.id }}"
                                class="search-filters w-full md:w-auto h-[56px] px-6 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-xl shadow-sm transition">
                            Поиск с фильтрам
                        </button>
                    </div>
                </div>


                <details class="group">
                    <!-- summary делаем flex, чтобы стрелка, иконка и текст шли в ряд -->
                    <summary class="cursor-pointer flex items-center gap-2 font-semibold text-gray-800 mb-2">
                        <svg class="size-5 transition-transform group-open:rotate-90"
                             xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M9 5l7 7-7 7"/>
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             class="size-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75"/>
                        </svg>
                        <span>Счета клиента</span>
                    </summary>
                    <!-- Содержимое -->
                    <div class="p-4 border rounded-lg">
                        <!-- Компаний -->
                        <div class="flex flex-col gap-3">
                            {% if client.bank_accounts %}
                                {% for account in client.bank_accounts %}
                                    <a href="/entities/legalEntities?legal_id={{ account.le_id }}"
                                       class="text-gray-700 hover:text-gray-900">
                                        <div class="flex flex-col gap-2 p-3 bg-white border rounded-lg shadow-sm text-sm">
                                            <!-- Счет -->
                                            <div class="flex justify-between items-center">
                                                <div>
                                                    <strong>
                                                        Компания:
                                                    </strong>
                                                    <span class="font-semibold text-gray-600 italic">
                                                        {{ account.company_name }}
                                                    </span>
                                                </div>
                                                <button type="button" class="ml-2 text-gray-600 hover:text-gray-900"
                                                        onclick="copyText('{{ account.company_name }}')">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                         stroke-width="2"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              d="M14 2v6h6"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                            <!-- ИНН -->
                                            <div class="flex justify-between items-center">
                                                <div><strong>ИНН:</strong>
                                                    <span class="font-semibold text-gray-600 italic">
                                                        {{ account.inn }}
                                                    </span>
                                                </div>
                                                <button type="button" class="ml-2 text-gray-600 hover:text-gray-900"
                                                        onclick="copyText('{{ account.inn }}')">
                                                    <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                         stroke-width="2"
                                                         viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                              d="M14 2v6h6"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                            <!-- Баланс + Отвязать -->
                                            <div class="flex justify-center items-center mt-2">
                                                <label for="unlink_account"
                                                       data-client-id="{{ supplier.id }}"
                                                       data-user-name="{{ client.name }}"
                                                       data-le-id="{{ account.le_id }}"
                                                       data-company-name="{{ account.company_name }}"
                                                       data-company-inn="{{ account.inn }}"
                                                       class="bg-red-100 text-red-600 text-sm px-3 py-1 rounded hover:bg-red-200 cursor-pointer"
                                                       title="Редактировать">
                                                    <i class="fa-solid fa-link-slash mr-1"></i> Отвязать
                                                </label>
                                            </div>
                                        </div>
                                    </a>
                                {% endfor %}

                            {% else %}
                                <div role="alert" class="alert alert-warning">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current"
                                         fill="none"
                                         viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                    </svg>
                                    <span>У клиента отсутствует компании!</span>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </details>
            </div>
        </div>
    {% endfor %}


    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    {% include './ChangeUserModal.twig' %}

    <script src="/assets/js/CopyText.js?v=<?= time() ?>"></script>
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css" />

    <script>
        // Инициализация всех полей
        document.querySelectorAll('.datepicker_from, .datepicker_to').forEach(field => {
            new Pikaday({
                field: field,
                format: 'DD.MM.YYYY',
                firstDay: 1,
                i18n: {
                    previousMonth: 'Предыдущий',
                    nextMonth: 'Следующий',
                    months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                    weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                    weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
                },
                toString(date) {
                    const day = String(date.getDate()).padStart(2, '0');
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${day}.${month}.${year}`;
                },
                parse(dateString) {
                    const parts = dateString.split('.');
                    const day = parseInt(parts[0], 10);
                    const month = parseInt(parts[1], 10) - 1;
                    const year = parseInt(parts[2], 10);
                    return new Date(year, month, day);
                }
            });
        });

        // Модальное уведомление
        function showCornerModal(message) {
            const checkbox = document.getElementById('notifications');
            const txtModal = document.getElementById('notifications-txt');
            checkbox.checked = true;
            txtModal.innerHTML = message;
            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }

        document.querySelectorAll('.search-filters').forEach(btn => {
            btn.addEventListener('click', () => {
                const container = btn.closest('.flex'); // ищем ближайший контейнер фильтра

                const dateFrom = container.querySelector('.datepicker_from');
                const dateTo   = container.querySelector('.datepicker_to');

                if (!dateFrom.value && !dateTo.value) {
                    showCornerModal('Выберите фильтр');
                    return;
                }
                if (!dateFrom.value && dateTo.value) {
                    showCornerModal('Выберите начало даты!');
                    return;
                }

                const clientId = btn.getAttribute('data-entity-client_id');
                const params = new URLSearchParams();
                params.append('shop_id', clientId);
                if (dateFrom.value) params.append('date_from', dateFrom.value);
                if (dateTo.value)   params.append('date_to', dateTo.value);

                window.location.href = `/transaction/shopReceiptsDate?${params.toString()}`;
            });
        });
    </script>



{% endblock %}
