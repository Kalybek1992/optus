{% extends './Navbar/Navbar.twig' %}
{% block content %}
    {% include './Breadcrumb/GetClientServices.twig' %}
    {% for client in clients %}
        <!-- Карточка клиента -->
        <div class="max-w-2xl mx-auto bg-white rounded-2xl shadow-lg p-4 sm:p-6 space-y-4 relative mt-4">
            <!-- Верхняя часть: имя, почта, действия -->
            <div class="space-y-4">
                <!-- Имя + кнопки справа -->
                <div class="flex items-center justify-between">
                    <div class="text-lg sm:text-xl font-semibold text-gray-800">{{ client.name }}</div>
                    <div class="flex space-x-2">
                        <label
                                for="delete_account"
                                class="text-gray-500 hover:text-red-600 cursor-pointer text-sm sm:text-base"
                                title="Удалить"
                                role="button"
                                tabindex="0"
                                data-email="{{ client.email }}"
                                data-name="{{ client.name }}"
                                data-entity-user_id="{{ client.user_id }}">
                            <span class="text-lg sm:text-xl"><i class="fa-solid fa-trash"></i></span>
                        </label>
                    </div>
                </div>


                <!-- Выбор фильтра дата -->
                <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4">
                    <!-- Дата "от" -->
                    <div class="flex items-center w-full sm:w-auto gap-2 text-xs sm:text-sm">
                        <span class="font-medium text-gray-600">ОТ-</span>
                        <input type="text"
                               placeholder="Дата начала"
                               autocomplete="off"
                               class="datepicker_from w-full sm:w-[12rem] h-12 sm:h-[56px] p-2 sm:p-4 bg-white rounded-xl shadow-sm text-xs sm:text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>

                    <!-- Дата "до" -->
                    <div class="flex items-center w-full sm:w-auto gap-2 text-xs sm:text-sm">
                        <span class="font-medium text-gray-600">ДО-</span>
                        <input type="text"
                               placeholder="Дата окончания"
                               autocomplete="off"
                               class="datepicker_to w-full sm:w-[12rem] h-12 sm:h-[56px] p-2 sm:p-4 bg-white rounded-xl shadow-sm text-xs sm:text-base font-semibold text-gray-700 uppercase border border-gray-200"/>
                    </div>

                    <!-- Кнопка поиска -->
                    <div class="w-full sm:w-auto">
                        <button
                                type="button"
                                data-entity-client_id="{{ client.id }}"
                                class="search-filters w-full sm:w-auto h-12 sm:h-[56px] px-4 sm:px-6 bg-blue-600 hover:bg-blue-700 text-white text-xs sm:text-sm font-semibold rounded-xl shadow-sm transition">
                            Поиск с фильтрам
                        </button>
                    </div>
                </div>

                <!-- Баланс и прочее -->
                <div class="p-3 sm:p-4 bg-white rounded-xl shadow-sm text-xs sm:text-sm uppercase border border-gray-200 space-y-2">
                    <!-- Общий баланс / Долг -->
                    <div class="flex justify-between items-center">
                        <div class="font-semibold text-gray-500">
                            {% if client.balance_sum >= 0 %}
                                Общий баланс
                            {% else %}
                                Долг
                            {% endif %}
                        </div>
                        <div class="font-semibold text-gray-600 text-sm sm:text-base"> {{ client.balance_sum|number_format(0, ',', ' ') }} ₽</div>
                    </div>
                    <!-- Tоварный долг перед клиентом -->
                    <div class="flex justify-between items-center">
                        <div class="font-semibold text-gray-500">Tоварный долг перед клиентом</div>
                        <div class="font-semibold text-gray-600 text-sm sm:text-base">{{ client.debit_amount_sum|number_format(0, ',', ' ') }} ₽</div>
                    </div>
                    <!-- Поставщик -->
                    <div class="flex justify-between items-center">
                        <div class="font-semibold text-gray-500">Поставщик</div>
                        <div class="flex items-center text-gray-600 text-sm sm:text-base cursor-pointer normal-case">
                            {{ client.suppler_name }}
                            <label class="ml-2 w-5 h-5 sm:w-6 sm:h-6 flex items-center justify-center text-gray-600 hover:text-gray-900"
                                   data-entity-user_id="{{ client.user_id }}">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                     stroke-width="1.5" stroke="currentColor" class="w-5 h-5 sm:w-6 sm:h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                          d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12"/>
                                </svg>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Счета клиента -->
                <details class="group">
                    <summary class="cursor-pointer flex items-center gap-2 font-semibold text-gray-800 mb-2 text-xs sm:text-sm">
                        <svg class="w-4 h-4 sm:w-5 sm:h-5 transition-transform group-open:rotate-90"
                             xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M9 5l7 7-7 7"/>
                        </svg>
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none"
                             viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                             class="w-5 h-5 sm:w-6 sm:h-6">
                            <path stroke-linecap="round" stroke-linejoin="round"
                                  d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75"/>
                        </svg>
                        <span>Счета клиента</span>
                    </summary>
                    <div class="p-2 sm:p-4 border rounded-lg space-y-2">
                        {% if client.bank_accounts %}
                            {% for account in client.bank_accounts %}
                                <a href="/entities/legalEntities?legal_id={{ account.le_id }}" class="text-gray-700 hover:text-gray-900">
                                    <div class="flex flex-col gap-1 sm:gap-2 p-2 sm:p-3 bg-white border rounded-lg shadow-sm text-xs sm:text-sm">
                                        <!-- Счет -->
                                        <div class="flex justify-between items-center">
                                            <div>
                                                <strong>Компания:</strong>
                                                <span class="font-semibold text-gray-600 italic">{{ account.company_name }}</span>
                                            </div>
                                            <button type="button" class="ml-2 text-gray-600 hover:text-gray-900"
                                                    onclick="copyText('{{ account.company_name }}')">
                                                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"></path>
                                                </svg>
                                            </button>
                                        </div>
                                        <!-- ИНН -->
                                        <div class="flex justify-between items-center">
                                            <div><strong>ИНН:</strong> <span class="font-semibold text-gray-600 italic">{{ account.inn }}</span></div>
                                            <button type="button" class="ml-2 text-gray-600 hover:text-gray-900"
                                                    onclick="copyText('{{ account.inn }}')">
                                                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8l6 6v4"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M14 2v6h6"></path>
                                                </svg>
                                            </button>
                                        </div>
                                        <!-- Отвязать -->
                                        <div class="flex justify-center items-center mt-1 sm:mt-2">
                                            <label for="unlink_account"
                                                   data-client-id="{{ client.id }}"
                                                   data-user-name="{{ client.name }}"
                                                   data-le-id="{{ account.le_id }}"
                                                   data-company-name="{{ account.company_name }}"
                                                   data-company-inn="{{ account.inn }}"
                                                   class="bg-red-100 text-red-600 text-xs sm:text-sm px-2 sm:px-3 py-1 rounded hover:bg-red-200 cursor-pointer"
                                                   title="Отвязать">
                                                <i class="fa-solid fa-link-slash mr-1"></i> Отвязать
                                            </label>
                                        </div>
                                    </div>
                                </a>
                            {% endfor %}
                        {% else %}
                            <div role="alert" class="alert alert-warning text-xs sm:text-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 sm:h-6 sm:w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                                <span>У клиента отсутствует компании!</span>
                            </div>
                        {% endif %}
                    </div>
                </details>
            </div>
        </div>

    {% endfor %}


    <div class="flex items-center justify-center py-6">
        {% include './Pagination/Pagination.twig' %}
    </div>

    <!-- Триггер через checkbox -->
    <input type="checkbox" id="notifications" class="hidden peer"/>
    <div class="fixed bottom-4 right-4 z-50 max-w-sm w-full
            hidden peer-checked:flex flex-col bg-white border border-gray-300 rounded-xl shadow-xl
            animate-fade-in transition-opacity duration-300 ease-out
            px-5 py-4 space-y-2">

        <div class="flex items-start justify-between">
            <div class="flex items-start space-x-2">
                <svg class="w-6 h-6 text-blue-500 mt-1 shrink-0" fill="none" stroke="currentColor" stroke-width="1.5"
                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022 23.85 23.85 0 0 0 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0 3 3 0 1 0 5.714 0ZM3.124 7.5A8.969 8.969 0 0 1 5.292 3m13.416 0a8.969 8.969 0 0 1 2.168 4.5"/>
                </svg>

                <div>
                    <h3 class="text-base font-semibold text-gray-900">Уведомление</h3>
                    <p id="notifications-txt" class="text-sm text-gray-600 leading-snug mt-1">...</p>
                </div>
            </div>

            <label for="notifications" class="text-gray-400 hover:text-gray-600 transition cursor-pointer">
                ✕
            </label>
        </div>
    </div>


    {% include './ChangeUserModal.twig' %}

    <script src="/assets/js/UserUpdate.js?v=<?= filemtime(__DIR__ . '/assets/js/UserUpdate.js') ?>"></script>
    <script src="/assets/js/CopyText.js?v=<?= time() ?>"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css">
    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/pikaday/pikaday.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pikaday/css/pikaday.css" />

    <script>
        // 1. Инициализируем все поля с классами datepicker_from и datepicker_to
        document.querySelectorAll('.datepicker_from, .datepicker_to').forEach(field => {
            new Pikaday({
                field: field,
                format: 'DD.MM.YYYY',
                firstDay: 1,
                i18n: {
                    previousMonth: 'Предыдущий',
                    nextMonth: 'Следующий',
                    months: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь', 'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
                    weekdays: ['Воскресенье', 'Понедельник', 'Вторник', 'Среда', 'Четверг', 'Пятница', 'Суббота'],
                    weekdaysShort: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб']
                },
                toString(date) {
                    const day = String(date.getDate()).padStart(2, '0');
                    const month = String(date.getMonth() + 1).padStart(2, '0');
                    const year = date.getFullYear();
                    return `${day}.${month}.${year}`;
                },
                parse(dateString) {
                    const parts = dateString.split('.');
                    const day = parseInt(parts[0], 10);
                    const month = parseInt(parts[1], 10) - 1;
                    const year = parseInt(parts[2], 10);
                    return new Date(year, month, day);
                }
            });
        });

        // 2. Вешаем обработчики на все кнопки .search-filters
        document.querySelectorAll('.search-filters').forEach(btn => {
            btn.addEventListener('click', () => {
                const wrapper = btn.closest('.filter-block'); // находим блок фильтра

                const dateFrom = wrapper.querySelector('.datepicker_from');
                const dateTo   = wrapper.querySelector('.datepicker_to');

                if (!dateFrom.value && !dateTo.value) {
                    showCornerModal('Выберите фильтр');
                    return;
                }

                if (!dateFrom.value && dateTo.value) {
                    showCornerModal('Выберите начало даты!');
                    return;
                }

                const clientId = btn.getAttribute('data-entity-client_id');
                const params = new URLSearchParams();
                params.append('client_id', clientId);
                if (dateFrom.value) params.append('date_from', dateFrom.value);
                if (dateTo.value)   params.append('date_to', dateTo.value);

                window.location.href = `/transaction/clientServicesReceiptsDate?${params.toString()}`;
            });
        });

        // 3. Показываем уведомление
        function showCornerModal(message) {
            const checkbox = document.getElementById('notifications');
            const txtModal = document.getElementById('notifications-txt');
            if (!checkbox || !txtModal) return;

            checkbox.checked = true;
            txtModal.innerHTML = message;
            setTimeout(() => {
                checkbox.checked = false;
            }, 5000);
        }
    </script>



{% endblock %}
